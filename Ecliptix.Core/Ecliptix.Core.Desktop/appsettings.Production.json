{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "_description": "Production Environment Configuration - Ecliptix Desktop Application",
  
  "DefaultAppSettings": {
    "DefaultTheme": "Light",
    "Environment": "Production",
    "DataCenterConnectionString": "http://127.0.0.1:5051",
    "CountryCodeApi": "https://api.country.is/",
    "DomainName": "127.0.0.1",
    "Culture": "en-US"
  },
  
  "SecureStoreOptions": {
    "EncryptedStatePath": "%APPDATA%/Storage/state"
  },

  "ImprovedRetryPolicy": {
    "_description": "Production retry configuration with robust defaults",
    "InitialRetryDelay": "00:00:05",
    "MaxRetryDelay": "00:02:00",
    "MaxRetries": 10,
    "MaxRetriesForAuth": 3,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerDuration": "00:01:00",
    "MinConnectionLifetime": "00:05:00",
    "RequestDeduplicationWindow": "00:00:10",
    "MaxPendingRequests": 100,
    "UseAdaptiveRetry": true,
    "JitterRatio": 0.25,
    "ProtocolStateSaveBatchWindow": "00:00:01",
    "MaxCachedKeys": 100,
    "HealthCheckTimeout": "00:00:05",
    "HealthCheckRetries": 2
  },
  
  "Serilog": {
    "_description": "Production logging optimized for performance and storage",
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Ecliptix.Core.App": "Information",
        "Ecliptix.Core.Network": "Information", 
        "Ecliptix.Core.Services": "Information",
        "Microsoft": "Warning",
        "System": "Warning",
        "Grpc": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "%APPDATA%/Storage/logs/ecliptix-prod-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 30,
                "fileSizeLimitBytes": 100000000,
                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext:l} {Message:lj}{NewLine}{Exception}",
                "buffered": true,
                "flushToDiskInterval": "00:00:30"
              }
            }
          ]
        }
      }
    ]
  }
}