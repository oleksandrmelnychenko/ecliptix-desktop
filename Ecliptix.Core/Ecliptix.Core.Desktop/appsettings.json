{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "_description": "Ecliptix Desktop Application - Base Configuration",
  
  "DefaultAppSettings": {
    "DefaultTheme": "Light",
    "Environment": "Production",
    "DataCenterConnectionString": "http://127.0.0.1:5051",
    "CountryCodeApi": "https://api.country.is/",
    "DomainName": "127.0.0.1",
    "Culture": "en-US"
  },

  "SecureStoreOptions": {
    "EncryptedStatePath": "%APPDATA%/Storage/state"
  },

  "SecrecyChannelRetryPolicy": {
    "_description": "Secrecy channel retry configuration with adaptive behavior",
    "InitialRetryDelay": "00:00:05",
    "MaxRetryDelay": "00:02:00",
    "MaxRetries": 20,
    "PerAttemptTimeout": "00:00:30",
    "UseAdaptiveRetry": true
  },
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Grpc": "Error",
        "Grpc.Net.Client": "Error",
        "System.Net.Http": "Warning",
        "System.Net.Sockets": "Error",
        "Ecliptix.Core.App": "Information",
        "Ecliptix.Core.Network": "Information",
        "Ecliptix.Core.Services": "Information",
        "Ecliptix.Core.Network.Services.Retry": "Information",
        "Ecliptix.Core.Controls": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "%APPDATA%/Storage/logs/ecliptix.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "fileSizeLimitBytes": 10000000,
                "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  }
}