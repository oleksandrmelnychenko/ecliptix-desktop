{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "_description": "Ecliptix Desktop Application - Base Configuration",
  
  "DefaultAppSettings": {
    "DefaultTheme": "Light",
    "Environment": "Production",
    "DataCenterConnectionString": "http://127.0.0.1:5051",
    "CountryCodeApi": "https://api.country.is/",
    "DomainName": "127.0.0.1",
    "Culture": "en-US"
  },
  
  "CountryApi": {
    "BaseAddress": "https://api.country.is/",
    "PathTemplate": "/{ip}",
    "ApiKeyHeaderName": null,
    "ApiKey": null
  },
  
  "SecureStoreOptions": {
    "EncryptedStatePath": "%APPDATA%/Storage/state"
  },
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Ecliptix.Core.App": "Warning",
        "Ecliptix.Core.Network": "Warning",
        "Ecliptix.Core.Services": "Warning",
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "%APPDATA%/Storage/logs/ecliptix.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "fileSizeLimitBytes": 10000000,
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  }
}