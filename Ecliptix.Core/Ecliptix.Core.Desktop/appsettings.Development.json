{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "_description": "Development Environment Configuration - Ecliptix Desktop Application",
  
  "DefaultAppSettings": {
    "DefaultTheme": "Light",
    "Environment": "Development",
    "DataCenterConnectionString": "http://127.0.0.1:5051",
    "CountryCodeApi": "https://api.country.is/",
    "DomainName": "127.0.0.1",
    "Culture": "en-US"
  },
  
  "SecureStoreOptions": {
    "EncryptedStatePath": "%APPDATA%/Storage/state"
  },
  
  "SecrecyChannelRetryPolicy": {
    "_description": "Development retry configuration with reduced timeouts and retries",
    "InitialRetryDelay": "00:00:02",
    "MaxRetryDelay": "00:00:30",
    "MaxRetries": 10,
    "PerAttemptTimeout": "00:00:30",
    "UseAdaptiveRetry": false
  },
  
  "Serilog": {
    "_description": "Development logging with verbose output for debugging",
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Grpc": "Debug",
        "Grpc.Net.Client": "Debug",
        "System.Net.Http": "Warning",
        "System.Net.Sockets": "Error",
        "Ecliptix.Core.App": "Debug",
        "Ecliptix.Core.Network": "Information",
        "Ecliptix.Core.Services": "Information",
        "Ecliptix.Core.Network.Services.Retry": "Debug",
        "Ecliptix.Core.Controls": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "%APPDATA%/Storage/logs/ecliptix-dev-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 3,
                "fileSizeLimitBytes": 50000000,
                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext:l} {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  }
}