{
  "AppSettings": {
    "DefaultTheme": "Light",
    "Environment": "Development",
    "DataCenterConnectionString": "http://127.0.0.1:5051",
    "DomainName": "mobile.api.ecliptix.io",
    "Localization": {
      "DefaultCulture": "en-US"
    }
  },
  "SecureStoreOptions": {
    "EncryptedStatePath": "%APPDATA%/Storage/state"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "%APPDATA%/Storage/logs/ecliptix.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "fileSizeLimitBytes": 10000000
              }
            }
          ]
        }
      }
    ]
  }
}