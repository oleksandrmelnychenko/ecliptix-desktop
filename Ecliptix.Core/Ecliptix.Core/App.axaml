<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Ecliptix.Core"
             xmlns:vm="clr-namespace:Ecliptix.Core.ViewModels"
             xmlns:views="clr-namespace:Ecliptix.Core.Views"
             x:Class="Ecliptix.Core.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <DataTemplate DataType="{x:Type vm:MainViewModel}">
            <views:MainView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SignInViewModel}">
            <views:SignInView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ForgotPasswordViewModel}">
            <views:ForgotPasswordView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SignUpViewModel}">
            <views:SignUpView/>
        </DataTemplate>
    </Application.DataTemplates>

    <Application.Styles>
        <SimpleTheme />
    </Application.Styles>
</Application>