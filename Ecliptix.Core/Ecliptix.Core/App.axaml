<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Ecliptix.Core.App"
             RequestedThemeVariant="Light">
    <Application.Styles>

        <SimpleTheme />
        <StyleInclude Source="/Styles/Buttons.axaml" />
        <StyleInclude Source="/Styles/Fonts.axaml" />
        <Style Selector="TextElement">
            <Setter Property="FontFamily" Value="Segoe UI, $Default" />
        </Style>
    </Application.Styles>

    <Application.Resources>
    </Application.Resources>

</Application>