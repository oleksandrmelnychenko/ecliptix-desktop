<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Ecliptix.Core.Controls"
             xmlns:authentication="clr-namespace:Ecliptix.Core.ViewModels.Authentication"
             mc:Ignorable="d"
             x:Class="Ecliptix.Core.Views.Authentication.SignInView"
             x:DataType="authentication:SignInViewModel">

    <Border VerticalAlignment="Top" Width="400" Padding="20" CornerRadius="15">
        <Grid VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" /> <!-- Spacer -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" /> <!-- Spacer -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" /> <!-- Spacer -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Sign in into account" FontSize="24" FontWeight="Bold" Foreground="Black" />
            <TextBlock Grid.Row="1" Text="Sign in to join conversation." FontSize="14" Foreground="Black" />

            <controls:HintedTextBox
                Grid.Row="3"
                x:Name="MobileTextBox"
                Watermark="Mobile"
                Hint="Include country code."
                Margin="0,0"
                BorderBrush="#FFE8E8E8"
                TextForeground="#333333"
                HintForeground="#6a5acd"
                IconSource="/Assets/lamp.svg"
                ValidationType="PhoneNumber"
                MainBorderBrush="LightGray"
                Text="{Binding PhoneNumber}" />

            <controls:HintedTextBox
                Grid.Row="5"
                x:Name="PasswordTextBox"
                Watermark="{Binding PasswordHint}"
                Hint="{Binding PasswordHint}"
                Margin="0,10"
                CornerRadius="15"
                BorderBrush="#E0E0E0"
                TextForeground="#333333"
                HintForeground="#6a5acd"
                IconSource="/Assets/lamp.svg"
                ValidationType="Password"
                PasswordChar="*" />

            <Button Grid.Row="7"
                    Classes="SubmitButton"
                    Content="Sign in"
                    Command="{Binding SignInCommand}" />
        </Grid>
    </Border>
</UserControl>