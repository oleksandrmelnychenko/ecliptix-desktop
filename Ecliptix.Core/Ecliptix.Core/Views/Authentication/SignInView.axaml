<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Ecliptix.Core.Controls"
             xmlns:memberships="clr-namespace:Ecliptix.Core.ViewModels.Memberships"
             mc:Ignorable="d"
             x:Class="Ecliptix.Core.Views.Authentication.SignInView"
             x:DataType="memberships:SignInViewModel">

    <Border VerticalAlignment="Top" Width="400" Padding="20" CornerRadius="15">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Sign in into account" FontSize="24" FontWeight="Bold" Foreground="Black" />
            <TextBlock Text="Sign in to join conversation." FontSize="14" Margin="0,4,0,10" Foreground="Black" />

            <StackPanel Spacing="10" MinWidth="350">
                <controls:HintedTextBox
                    x:Name="MobileTextBox"
                    Background="White"
                    Watermark="Mobile"
                    Hint="Include country code."
                    Margin="0,10"
                    BorderBrush="#FFE8E8E8"
                    TextForeground="#333333"
                    HintForeground="#6a5acd"
                    IconSource="/Assets/lamp.svg"
                    ValidationType="PhoneNumber"
                    MainBorderBrush="LightGray" />
                <controls:HintedTextBox
                    x:Name="PasswordTextBox"
                    Watermark="Password"
                    Hint="Use 8+ chars."
                    PasswordChar="â€¢"
                    BorderBrush="#FFE8E8E8"
                    Margin="0,0,0,10"
                    TextForeground="#333333"
                    HintForeground="#6a5acd"
                    IconSource="/Assets/lamp.svg"
                    ValidationType="Password"
                    MainBorderBrush="LightGray" />
                <Button Classes="SubmitButton"
                        Content="Sign in"
                        Command="{Binding SignInCommand}" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>