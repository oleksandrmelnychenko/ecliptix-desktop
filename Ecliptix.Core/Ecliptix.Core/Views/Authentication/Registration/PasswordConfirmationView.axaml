<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Ecliptix.Core.Controls"
             xmlns:registration="clr-namespace:Ecliptix.Core.ViewModels.Authentication.Registration"
             xmlns:signUp="clr-namespace:Ecliptix.Core.ViewModels.Memberships.SignUp"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="signUp:PasswordConfirmationViewModel"
             x:Class="Ecliptix.Core.Views.Authentication.Registration.PasswordConfirmationView">
   
    <Grid RowDefinitions="Auto,*">
        <TextBlock Grid.Row="0" TextWrapping="Wrap" Text="{Binding Title}"
                   FontSize="24" FontWeight="Light" Foreground="#333333" />

        <Grid Grid.Row="1" RowDefinitions="Auto,Auto,Auto,Auto" MinWidth="350" Margin="0,10,0,0">
            <controls:HintedTextBox
                Grid.Row="0"
                x:Name="PasswordTextBox"
                Watermark="{Binding PasswordHint}"
                Hint="{Binding PasswordHint}"
                Margin="0,10"
                CornerRadius="15"
                BorderBrush="#E0E0E0"
                TextForeground="#333333"
                HintForeground="#6a5acd"
                IconRegularSource="{DynamicResource LampIconDrawingRegular}"
                IconErrorSource="{DynamicResource LampIconDrawingError}"            
                ValidationType="SecureKey" 
                PasswordChar="*"/>

            <controls:HintedTextBox
                Grid.Row="1"
                x:Name="VerifyPasswordTextBox"
                Watermark="{Binding VerifyPasswordHint}"
                Hint="{Binding VerifyPasswordHint}"
                Margin="0,5 0 0"
                CornerRadius="15"
                BorderBrush="#E0E0E0"
                TextForeground="#333333"
                HintForeground="#6a5acd"
                IconRegularSource="{DynamicResource LampIconDrawingRegular}"
                IconErrorSource="{DynamicResource LampIconDrawingError}"             ValidationType="SecureKey"
                PasswordChar="*"/>

            <TextBlock
                Grid.Row="2"
                Text="{Binding PasswordErrorMessage}"
                Foreground="Red"
                HorizontalAlignment="Center"
                Height="20"
                Margin="0,5 0 5"
                Opacity="{Binding IsPasswordErrorVisible}" />

            <Button
                Grid.Row="3"
                Classes="SubmitButton"
                Command="{Binding SubmitCommand}"
                Content="{Binding ButtonContent}"
                IsEnabled="{Binding CanSubmit}" />
        </Grid>
    </Grid>
</UserControl>