<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Ecliptix.Core.Controls"
             xmlns:memberships="clr-namespace:Ecliptix.Core.ViewModels.Memberships"
             xmlns:registration="clr-namespace:Ecliptix.Core.ViewModels.Authentication.Registration"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="registration:PhoneVerificationViewModel"
             x:Class="Ecliptix.Core.Views.Authentication.Registration.PhoneVerificationView">
    <Border VerticalAlignment="Top" Width="400" Padding="20" CornerRadius="15">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Mobile number verification" FontSize="24" FontWeight="Light" Foreground="#333333" />
            <TextBlock Text="We will send sms to you mobile" FontSize="14" Margin="0,4,0,10" Foreground="#B0B0B0" />

            <StackPanel Spacing="10" MinWidth="350">
                <controls:HintedTextBox
                    x:Name="MobileTextBox"
                    Watermark="Mobile"
                    Hint="Include country code."
                    Text="{Binding Mobile, Mode=TwoWay}"
                    Margin="0,10"
                    CornerRadius="15"
                    BorderBrush="#E0E0E0"
                    TextForeground="#333333"
                    HintForeground="#6a5acd"
                    IconSource="/Assets/lamp.svg"
                    ValidationType="PhoneNumber" />

                <Button
                    Classes="SubmitButton"
                    Content="Send verification code"
                    Command="{Binding VerifyMobileCommand}" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>