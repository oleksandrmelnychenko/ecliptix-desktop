<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Ecliptix.Core.Views"
        xmlns:viewModels="clr-namespace:Ecliptix.Core.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ecliptix.Core.Views.AuthorizationWindow"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen"
        MinWidth="1200" MinHeight="800"
        Icon="/Assets/avalonia-logo.ico"
        Title="AuthorizationWindow"
        x:DataType="viewModels:AuthorizationViewModel">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Spacing="10" Margin="10">
            <Button Content="Sign In" Command="{Binding OpenSignInCommand}" />
            <Button Content="Forgot Password" Command="{Binding OpenForgotPasswordCommand}" />
            <Button Content="Sign Up" Command="{Binding OpenSignUpCommand}" />
            <Button Content="Main window" Command="{Binding OpenMainWindowCommand} " />
        </StackPanel>
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>