<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ecliptix.Core.Views.Core.MainHostWindow"
        Title="Ecliptix"
        Icon="avares://Ecliptix.Core/Assets/Branding/Logos/logo_256x256.png">
    <!-- Styles moved to shared Components/TrafficLights.axaml -->

    <Border Name="RootWindowBorder"
            Background="{DynamicResource Window.Background}"
            CornerRadius="8"
            Padding="0"
            BoxShadow="0 0 10 2 #11000000">
        <Grid>
            <Grid>
                <Button Name="LogoutButton"
                        Content="Logout"
                        Width="120"
                        Height="36"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Classes="auth-button continue-button"/>
            </Grid>
        </Grid>
    </Border>
</Window>