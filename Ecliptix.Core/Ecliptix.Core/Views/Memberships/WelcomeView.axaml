<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Ecliptix.Core.ViewModels.Memberships"
             mc:Ignorable="d" d:DesignWidth="420" d:DesignHeight="700"
             x:Class="Ecliptix.Core.Views.Memberships.WelcomeView"
             x:DataType="vm:WelcomeViewModel">

    <Border MaxWidth="420"
            Padding="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

        <Grid RowDefinitions="Auto, *, Auto, Auto" RowSpacing="20">

            <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,20">
                <TextBlock Text="Welcome to Ecliptix"
                           FontSize="22"
                           FontWeight="Regular"
                           TextAlignment="Center"
                           Foreground="#272320" />
              
            </StackPanel>

            <Carousel Grid.Row="1"
                      ItemsSource="{Binding FeatureSlides}"
                      Transitions=""
                      SelectedIndex="{Binding SelectedSlideIndex, Mode=TwoWay}">
                <Carousel.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#e8e9ff" CornerRadius="32" Width="250" Height="250">
                            <StackPanel Spacing="16" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <PathIcon Data="{Binding IconPath}"
                                          Width="64" Height="64"
                                          Foreground="White" />
                                <TextBlock Text="{Binding Description}"
                                           FontSize="16"
                                           Foreground="#D0D0D0"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </Carousel.ItemTemplate>
            </Carousel>

            <StackPanel Grid.Row="3" Spacing="12" Margin="0,40,0,0">
                <TextBlock Text="Створіть обліковий запис або ввійдіть, 
щоб зберігати всі розмови та 
генерувати зображення"
                           TextWrapping="Wrap"
                           FontSize="16"
                           TextAlignment="Center"
                           FontWeight="Light"
                           Foreground="#A0A0A0" />
                
                <Button Content="Create account"
                        Command="{Binding NavToCreateAccountCommand}"
                        HorizontalAlignment="Stretch"
                        Height="55"
                        Background="#272320"
                        Foreground="#e2ddd9"
                        FontWeight="Regular"
                        FontSize="14"
                        CornerRadius="12" />

                <Button Content="Sign in"
                        Command="{Binding NavToSignInCommand}"
                        HorizontalAlignment="Stretch"
                        Height="55"
                        Background="Transparent"
                        Foreground="#272320"
                        BorderBrush="#272320"
                        FontFeatures="Underline"
                        BorderThickness="0"
                        FontWeight="Regular"
                        FontSize="14"
                        CornerRadius="12" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>