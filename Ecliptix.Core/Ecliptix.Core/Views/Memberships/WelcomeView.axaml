<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Ecliptix.Core.ViewModels.Memberships"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d"
             d:DesignWidth="320"
             d:DesignHeight="420"
             x:Class="Ecliptix.Core.Views.Memberships.WelcomeView"
             x:DataType="vm:WelcomeViewModel"
             MinWidth="320"
             Width="320">

    <UserControl.Resources>
        <!-- Layout Dimensions -->
        <x:Double x:Key="ButtonHeight">44</x:Double>
        <x:Double x:Key="StandardFontSize">14</x:Double>
        <x:Double x:Key="LogoHeight">36</x:Double>
        <x:Double x:Key="TaglineHeight">18</x:Double>
        <x:Double x:Key="CircleSize">180</x:Double>
        <x:Double x:Key="InnerCircleSize">170</x:Double>
        <x:Double x:Key="BlurRadius">8</x:Double>

        <!-- Spacing -->
        <x:Double x:Key="HeaderSpacing">12</x:Double>
        <x:Double x:Key="SectionSpacing">18</x:Double>
        <x:Double x:Key="ButtonSpacing">8</x:Double>

        <!-- Corner Radius -->
        <CornerRadius x:Key="SignInButtonCornerRadius">10</CornerRadius>
        <CornerRadius x:Key="CreateAccountButtonCornerRadius">12</CornerRadius>
        <CornerRadius x:Key="CircleImageCornerRadius">90</CornerRadius>
        <CornerRadius x:Key="InnerCircleCornerRadius">85</CornerRadius>

        <!-- Colors -->
        <Color x:Key="SignInButtonHoverColor">#E4E3E3</Color>
        <Color x:Key="SignInButtonPressedColor">#D1D0D0</Color>
        <Color x:Key="CircleBorderColor">White</Color>

        <!-- Durations -->
        <system:TimeSpan x:Key="ButtonTransitionDuration">0:0:0.3</system:TimeSpan>

        <!-- Thickness -->
        <Thickness x:Key="CircleBorderThickness">4</Thickness>
        <Thickness x:Key="ContainerMargin">0,8,0,16</Thickness>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Button Base Styles -->
        <Style Selector="Button.auth-button">
            <Setter Property="Height" Value="{StaticResource ButtonHeight}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="{StaticResource StandardFontSize}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="{StaticResource ButtonTransitionDuration}" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.auth-button:pressed">
            <Setter Property="RenderTransform" Value="scale(0.98)" />
        </Style>

        <!-- Sign In Button -->
        <Style Selector="Button.signin-button">
            <Setter Property="CornerRadius" Value="{StaticResource SignInButtonCornerRadius}" />
            <Setter Property="Background" Value="{DynamicResource BackButtonBackgroundColor}" />
        </Style>

        <Style Selector="Button.signin-button:pointerover">
            <Setter Property="Background" Value="{StaticResource SignInButtonHoverColor}" />
        </Style>

        <Style Selector="Button.signin-button:pressed">
            <Setter Property="Background" Value="{StaticResource SignInButtonPressedColor}" />
        </Style>

        <!-- Create Account Button -->
        <Style Selector="Button.create-account-button">
            <Setter Property="CornerRadius" Value="{StaticResource CreateAccountButtonCornerRadius}" />
            <Setter Property="Background" Value="{DynamicResource DarkButtonColor}" />
            <Setter Property="Foreground" Value="{DynamicResource DarkButtonForegroundColor}" />
        </Style>

        <!-- Circle Container -->
        <Style Selector="Border.circle-container">
            <Setter Property="Width" Value="{StaticResource CircleSize}" />
            <Setter Property="Height" Value="{StaticResource CircleSize}" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!-- Header Section -->
        <Style Selector="StackPanel.header-section">
            <Setter Property="Spacing" Value="{StaticResource HeaderSpacing}" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </UserControl.Styles>

    <!-- Main Container with fixed width -->
    <StackPanel Spacing="{StaticResource SectionSpacing}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="{StaticResource ContainerMargin}"
                Width="320">

        <!-- Header Section -->
        <StackPanel Classes="header-section"
                    Name="HeaderSection">

            <!-- Main Logo -->
            <Border Height="{StaticResource LogoHeight}"
                    HorizontalAlignment="Center">
                <Image Source="avares://Ecliptix.Core/Assets/Welcome-screen/EcliptiX.png"
                       Stretch="Uniform" />
            </Border>

            <!-- Tagline -->
            <Border Height="{StaticResource TaglineHeight}"
                    HorizontalAlignment="Center">
                <Image Source="avares://Ecliptix.Core/Assets/Welcome-screen/Master the architecture of your mind.png"
                       Stretch="Uniform" />
            </Border>
        </StackPanel>

        <!-- Central Circle Image -->
        <Viewbox MaxWidth="{StaticResource CircleSize}"
                 MaxHeight="{StaticResource CircleSize}"
                 HorizontalAlignment="Center">

            <Grid Width="{StaticResource CircleSize}"
                  Height="{StaticResource CircleSize}">

                <!-- Background Blur Circle -->
                <Border Classes="circle-container"
                        CornerRadius="{StaticResource CircleImageCornerRadius}"
                        BorderThickness="{StaticResource CircleBorderThickness}"
                        Background="{StaticResource CircleBorderColor}">
                    <Border.Effect>
                        <BlurEffect Radius="{StaticResource BlurRadius}" />
                    </Border.Effect>
                </Border>

                <!-- Main Image Circle -->
                <Border Width="{StaticResource InnerCircleSize}"
                        Height="{StaticResource InnerCircleSize}"
                        CornerRadius="{StaticResource InnerCircleCornerRadius}"
                        ClipToBounds="True"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <Image Source="avares://Ecliptix.Core/Assets/Welcome-screen/bg.png"
                           Stretch="UniformToFill" />
                </Border>
            </Grid>
        </Viewbox>

        <!-- Action Buttons -->
        <Grid ColumnDefinitions="*,*"
              ColumnSpacing="{StaticResource ButtonSpacing}"
              HorizontalAlignment="Stretch"
              Margin="0,4,0,0">

            <!-- Sign In Button -->
            <Button Grid.Column="0"
                    Content="Sign in"
                    Command="{Binding NavToSignInCommand}"
                    Classes="auth-button signin-button"
                    Foreground="{DynamicResource LightButtonForegroundColor}"
                    HorizontalAlignment="Stretch" />

            <!-- Create Account Button -->
            <Button Grid.Column="1"
                    Content="Create account"
                    Command="{Binding NavToCreateAccountCommand}"
                    Classes="auth-button create-account-button"
                    HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>