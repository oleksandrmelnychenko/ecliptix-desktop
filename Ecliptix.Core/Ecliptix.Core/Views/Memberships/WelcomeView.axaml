<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Ecliptix.Core.ViewModels.Memberships"
             mc:Ignorable="d" d:DesignWidth="420" d:DesignHeight="700"
             x:Class="Ecliptix.Core.Views.Memberships.WelcomeView"
             x:DataType="vm:WelcomeViewModel">

    <Border MaxWidth="420"
            Padding="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

        <Grid RowDefinitions="Auto, *, Auto, Auto" RowSpacing="5">

            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,5">
                <TextBlock Text="Welcome to Ecliptix"
                           FontSize="22"
                           FontWeight="Regular"
                           TextAlignment="Center"
                           Foreground="#272320" />
            </StackPanel>

            <!-- Carousel with peek effect -->
            <StackPanel Grid.Row="1" Spacing="16">
                <!-- Custom carousel container for peek effect -->
                <Border Height="200" ClipToBounds="False">
                    <ScrollViewer Name="CarouselScrollViewer"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Disabled"
                                  HorizontalAlignment="Stretch">
                        <ItemsControl ItemsSource="{Binding FeatureSlides}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="16"
                                                HorizontalAlignment="Center"
                                                Margin="40,0"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:FeatureSlide">
                                    <Border Background="{Binding BackgroundColor}"
                                            CornerRadius="24"
                                            Width="240"
                                            Height="280">
                                        <StackPanel Spacing="20"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Margin="24">
                                            <PathIcon Data="{Binding IconPath}"
                                                      Width="48"
                                                      Height="48"
                                                      Foreground="#272320" />
                                            <TextBlock Text="{Binding Title}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="#272320"
                                                       TextAlignment="Center" />
                                            <TextBlock Text="{Binding Description}"
                                                       FontSize="14"
                                                       Foreground="#666666"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       LineHeight="20" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Dynamic slide indicators -->
                <ItemsControl Name="SlideIndicators" ItemsSource="{Binding FeatureSlides}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Name="SlideIndicator" 
                                    Width="8"
                                    Height="8"
                                    CornerRadius="4"
                                    Tapped="OnIndicatorTapped">
                                <Border.Styles>
                                    <Style Selector="Border">
                                        <Setter Property="Background" Value="#D0D0D0" />
                                    </Style>
                                </Border.Styles>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Action buttons -->
            <StackPanel Grid.Row="3" Spacing="12" Margin="0,40,0,0">
                <TextBlock Text="Створіть обліковий запис або ввійдіть,
щоб зберігати всі розмови та
генерувати зображення"
                           TextWrapping="Wrap"
                           FontSize="16"
                           TextAlignment="Center"
                           FontWeight="Light"
                           Foreground="#A0A0A0" />

                <Button Content="Create account"
                        Command="{Binding NavToCreateAccountCommand}"
                        HorizontalAlignment="Stretch"
                        Height="55"
                        Background="#272320"
                        Foreground="#e2ddd9"
                        FontWeight="Regular"
                        FontSize="14"
                        CornerRadius="12" />

                <Button Content="Sign in"
                        Command="{Binding NavToSignInCommand}"
                        HorizontalAlignment="Stretch"
                        Height="55"
                        Background="Transparent"
                        Foreground="#272320"
                        BorderBrush="#272320"
                        FontFeatures="Underline"
                        BorderThickness="0"
                        FontWeight="Regular"
                        FontSize="14"
                        CornerRadius="12" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>