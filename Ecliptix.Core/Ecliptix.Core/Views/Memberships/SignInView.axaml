<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Ecliptix.Core.Controls"
             xmlns:memberships="clr-namespace:Ecliptix.Core.ViewModels.Memberships"
             mc:Ignorable="d"
             x:Class="Ecliptix.Core.Views.Memberships.SignInView"
             x:DataType="memberships:SignInViewModel">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
        <Viewbox MaxWidth="130" MaxHeight="130" MinHeight="80" MinWidth="80" Stretch="Uniform">
            <Image Source="avares://Ecliptix.Core/Assets/logo_160.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </Viewbox>

        <Grid RowDefinitions="Auto" ColumnDefinitions="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Grid.Column="0" Background="White" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect OffsetX="0" OffsetY="2" BlurRadius="10" Color="#20000000" />
                </Border.Effect>
                <StackPanel Margin="30" VerticalAlignment="Center">
                    <TextBlock Text="Sign in into account" FontSize="24" FontWeight="Bold" Foreground="Black" />
                    <TextBlock Text="Sign in to join conversation." FontSize="14" Margin="0,4,0,20" Foreground="Black" />

                    <StackPanel Spacing="10">
                        <controls:HintedTextBox
                            Height="60"
                            Watermark="Email"
                            Hint="Enter email"
                            Text="{Binding Mobile, Mode=TwoWay}"
                            Margin="0,10"
                            TextForeground="#333333"
                            HintForeground="#666666"
                            IconSource="/Assets/lamp.svg" />
                        <controls:HintedTextBox
                            Height="60"
                            Watermark="Password"
                            Hint="Choose a strong password"
                            PasswordChar="â€¢"
                            Text="{Binding Password, Mode=TwoWay}"
                            Margin="0,0,0,10"
                            TextForeground="#333333"
                            HintForeground="#666666"
                            IconSource="/Assets/lamp.svg" />
                        <Button
                            Classes="SubmitButton"
                            Content="Sign in"
                            Height="45"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            CornerRadius="6"
                            FontSize="15"
                            Command="{Binding SignInCommand}">
                            <Button.Styles>
                                <Style Selector="Button.SubmitButton">
                                    <Setter Property="Background" Value="#6a5acd" />
                                    <Setter Property="Transitions">
                                        <Transitions>
                                            <BrushTransition Property="Background" Duration="0:0:0.1" />
                                        </Transitions>
                                    </Setter>
                                </Style>
                                <Style Selector="Button.SubmitButton:pointerover">
                                    <Setter Property="Background" Value="#0a1c2b" />
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </StackPanel>
</UserControl>