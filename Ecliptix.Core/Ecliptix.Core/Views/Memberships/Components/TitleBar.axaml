<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:windows="clr-namespace:Ecliptix.Core.Views.Memberships.Components.Platform.Windows"
    xmlns:vm="clr-namespace:Ecliptix.Core.Views.Memberships.Components"
    xmlns:osx="clr-namespace:Ecliptix.Core.Views.Memberships.Components.Platform.OSX"
    x:Class="Ecliptix.Core.Views.Memberships.Components.TitleBar"
    Height="35"
    x:DataType="vm:TitleBarViewModel">

    <ContentControl x:Name="PART_Root" Content="{Binding}">
        <ContentControl.Styles>

            <Style Selector="ContentControl:windows">
                <Setter Property="ContentTemplate">
                    <DataTemplate>
                        <windows:WindowsTitleBarLayout />
                    </DataTemplate>
                </Setter>
            </Style>

            <Style Selector="ContentControl:macos">
                <Setter Property="ContentTemplate">
                    <DataTemplate>
                        <osx:MacosTitleBarLayout />
                    </DataTemplate>
                </Setter>
            </Style>

            <Style Selector="ContentControl">
                <Setter Property="ContentTemplate">
                    <DataTemplate>
                        <windows:WindowsTitleBarLayout />
                    </DataTemplate>
                </Setter>
            </Style>

        </ContentControl.Styles>
    </ContentControl>
</UserControl>
