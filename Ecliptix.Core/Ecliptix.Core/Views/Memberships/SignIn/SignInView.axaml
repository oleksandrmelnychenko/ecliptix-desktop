<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:authentication="clr-namespace:Ecliptix.Core.ViewModels.Authentication"
             xmlns:controls="clr-namespace:Ecliptix.Core.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="authentication:SignInViewModel"
             x:Class="Ecliptix.Core.Views.Memberships.SignIn.SignInView">

    <Border MaxWidth="420"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            BorderBrush="#ece9ea"
            BorderThickness="1"
            CornerRadius="22"
            Background="#fefbfa"
            Padding="24">

        <Grid VerticalAlignment="Center" RowSpacing="15" RowDefinitions="Auto,Auto,Auto,Auto">
            <StackPanel Grid.Row="0" Margin="0,0,0,20" Spacing="8">
                <TextBlock Text="Sign in to Ecliptix"
                           FontSize="18"
                           FontWeight="Medium"
                           Foreground="#272320" />
                <TextBlock Text="Please confirm your country code and mobile number"
                           TextWrapping="Wrap"
                           FontSize="16"
                           FontWeight="Light"
                           Foreground="#272320" />
            </StackPanel>

            <controls:HintedTextBox
                Grid.Row="1"
                x:Name="MobileTextBox"
                Watermark="Mobile"
                Hint="Include country code."
                BorderBrush="#e2e0e1"
                TextForeground="#333333"
                HintForeground="#6a5acd"
                IconSource="/Assets/lamp.svg"
                ValidationType="PhoneNumber"
                MainBorderBrush="#e2e0e1"
                Text="{Binding PhoneNumber}" />

            <controls:HintedTextBox
                Grid.Row="2"
                x:Name="PasswordTextBox"
                Watermark="Secure Key"
                Hint="Secure key to your account"
                Margin="0 0 0 10"
                CornerRadius="15"
                BorderBrush="#e2e0e1"
                TextForeground="#333333"
                HintForeground="#6a5acd"
                IconSource="/Assets/lamp.svg"
                MainBorderBrush="#e2e0e1"
                ValidationType="Password"
                PasswordChar="*" />

            <StackPanel Grid.Row="3" Spacing="12" Margin="0,20,0,0">

                <Button
                    Classes="SubmitButton"
                    Background="#272320"
                    Margin="0,20,0,0"
                    Content="Continue"
                    Command="{Binding SignInCommand}" />

                <TextBlock HorizontalAlignment="Center" Text="Account recovery"></TextBlock>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>