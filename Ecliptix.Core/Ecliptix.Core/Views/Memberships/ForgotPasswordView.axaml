<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Ecliptix.Core.Controls"
             xmlns:anim="https://github.com/whistyun/AnimatedImage.Avalonia"
             xmlns:memberships="clr-namespace:Ecliptix.Core.ViewModels.Memberships"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ecliptix.Core.Views.Memberships.ForgotPasswordView"
             x:DataType="memberships:ForgotPasswordViewModel">
 
  
    
            <Grid RowDefinitions="Auto" ColumnDefinitions="400" HorizontalAlignment="Center" VerticalAlignment="Top">
               
                    <StackPanel Margin="30" VerticalAlignment="Center">
                        <TextBlock
                            Text="Forgot password?" FontSize="24" FontWeight="Bold"
                            Foreground="Black" />
                        <TextBlock
                            Text="Send recovery message."
                            FontSize="14"
                            Margin="0,4,0,20"
                            Foreground="Black" />

                        <StackPanel Spacing="10">
                            <controls:HintedTextBox
                                Watermark="Phone number"
                                Hint="Enter phone number"
                                Text="{Binding Mobile, Mode=TwoWay}"
                                Margin="0,10"
                                TextForeground="#333333"
                                HintForeground="#6a5acd"
                                IconSource="/Assets/lamp.svg"
                                MainBorderBrush="LightGray" 
                                ValidationType="PhoneNumber"
                                />

                            <Button
                                Classes="SubmitButton"
                                Content="Sign in" /> 
                            
                        </StackPanel>
                    </StackPanel>
               </Grid>
 
</UserControl>