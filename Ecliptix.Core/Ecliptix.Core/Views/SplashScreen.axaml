<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Ecliptix.Core.ViewModels"
        mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="340"
        x:Class="Ecliptix.Core.Views.SplashScreen"
        x:DataType="vm:SplashScreenViewModel"
        x:CompileBindings="True"
        Title="Ecliptix"
        Width="480" Height="340"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="Transparent">

    <Grid>
        <Border Margin="18"
                CornerRadius="16"
                Background="#AA9966CC">
            <Border.Effect>
                <BlurEffect Radius="25" />
            </Border.Effect>
        </Border>

        <Border Background="#fafafa"
                BorderBrush="#B084CC"
                BorderThickness="1"
                CornerRadius="16"
                Padding="14"
                Margin="10">

            <Border.Effect>
                <DropShadowEffect Color="#9966CC"
                                  BlurRadius="15"
                                  Opacity="0.6"
                                  OffsetX="0"
                                  OffsetY="0" />
            </Border.Effect>

            <Grid RowDefinitions="*, Auto, Auto, Auto">

                <Image Grid.Row="0"
                       Source="/Assets/ecliptix.png" 
                       Width="150"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />
                
                <TextBlock Grid.Row="1"
                           Text="{Binding StatusText}"
                           FontSize="12"
                           Foreground="#404040"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,16" />

                <ProgressBar Grid.Row="2"
                             IsIndeterminate="True"
                             Foreground="#9966CC"
                             Background="#E6E0F8"
                             Height="2"
                             CornerRadius="2"
                             HorizontalAlignment="Stretch" />

                <TextBlock Grid.Row="3"
                           Text="{CompiledBinding ApplicationVersion}"
                           FontSize="8"
                           Foreground="#A0A0A0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="0,24,0,0" />

            </Grid>
        </Border>
    </Grid>
</Window>