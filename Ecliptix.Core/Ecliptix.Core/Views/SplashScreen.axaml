<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Ecliptix.Core.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ecliptix.Core.Views.SplashScreen"
        Title="Ecliptix"
        Width="400" Height="300"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="None"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        x:CompileBindings="True"
        x:DataType="vm:SplashScreenViewModel">
    <Border Background="White"
            CornerRadius="16"
            BoxShadow="0 4 16 0 #20000000"
            Margin="0">
        <Grid RowDefinitions="*,Auto,Auto" Margin="24">
            <!-- Logo and Progress Bar -->
            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="16">
                <Image Source="/Assets/ecliptix.png"
                       Width="96"
                       Height="96" />
                <ProgressBar Foreground="DarkOrchid"
                             IsIndeterminate="True"
                             Height="8"
                             Width="200" />
            </StackPanel>

            <!-- Status -->
            <TextBlock Grid.Row="1"
                       Text="{CompiledBinding Status}"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0" />

            <!-- Version and Copyright -->
            <Grid Grid.Row="2" Margin="0,16,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Copyright (Bottom-Left) -->
                <TextBlock Grid.Column="0"
                           Text="Â© Horizon Dynamics LLC 2025"
                           FontSize="12"
                           Foreground="#B0B0B0"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left" />

                <!-- Version (Bottom-Right) -->
                <TextBlock Grid.Column="1"
                           Text="{CompiledBinding ApplicationVersion}"
                           FontSize="12"
                           Foreground="#B0B0B0"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Right" />
            </Grid>
        </Grid>
    </Border>
</Window>