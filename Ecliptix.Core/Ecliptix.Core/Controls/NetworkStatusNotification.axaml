<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Ecliptix.Core.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ecliptix.Core.Controls.NetworkStatusNotification"
             x:Name="Root"
             IsVisible="{Binding IsVisible}"
             x:DataType="controls:NetworkStatusNotificationViewModel">
    
    <Border x:Name="MainBorder"
            CornerRadius="12"
            Padding="12,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{Binding Background, ElementName=Root}">
        
        <Border.Styles>
            <Style Selector="Border.CircuitOpen">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                            <GradientStop Color="#3a1f1f" Offset="0" />
                            <GradientStop Color="#2f2f2f" Offset="1" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style Selector="Border.Retrying">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                            <GradientStop Color="#2f3a1f" Offset="0" />
                            <GradientStop Color="#2f2f2f" Offset="1" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>
        </Border.Styles>

        <Grid RowSpacing="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- Main notification content -->
            <Grid Grid.Row="0" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Connection icon -->
                <Image Width="25" Height="25" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center" 
                       Grid.Column="0"
                       Source="avares://Ecliptix.Core/Assets/wifi.png"
                       Stretch="Uniform" />

                <!-- Status text and metrics -->
                <StackPanel Spacing="3" VerticalAlignment="Center" Grid.Column="1">
                    <TextBlock x:Name="StatusTextBlock"
                               Foreground="White"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               TextWrapping="NoWrap"
                               Text="{Binding StatusText}" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock x:Name="StatusDescriptionTextBlock"
                                   Foreground="#a9a9a9"
                                   FontWeight="Medium"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   TextWrapping="NoWrap"
                                   Text="{Binding StatusDescription}" />
                        
                        <!-- Circuit breaker indicator -->
                        <Border IsVisible="{Binding ShowCircuitStatus}"
                                CornerRadius="3"
                                Padding="4,1"
                                Background="#3a2828">
                            <TextBlock Text="{Binding CircuitStatusText}"
                                       Foreground="{Binding CircuitStatusColor}"
                                       FontSize="10"
                                       FontWeight="Bold" />
                        </Border>
                    </StackPanel>
                </StackPanel>
                
                <!-- Retry metrics -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            Spacing="12"
                            VerticalAlignment="Center"
                            IsVisible="{Binding ShowRetryMetrics}">
                    
                    <!-- Retry attempt counter -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Attempt:" 
                                   Foreground="#808080"
                                   FontSize="10" />
                        <TextBlock Text="{Binding CurrentAttempt}" 
                                   Foreground="#84cd57"
                                   FontWeight="Bold"
                                   FontSize="10" />
                        <TextBlock Text="/" 
                                   Foreground="#808080"
                                   FontSize="10" />
                        <TextBlock Text="{Binding MaxAttempts}" 
                                   Foreground="#808080"
                                   FontSize="10" />
                    </StackPanel>
                    
                    <!-- Success rate -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Success:" 
                                   Foreground="#808080"
                                   FontSize="10" />
                        <TextBlock Text="{Binding SuccessRate}" 
                                   Foreground="{Binding SuccessRateColor}"
                                   FontWeight="Bold"
                                   FontSize="10" />
                    </StackPanel>
                </StackPanel>
                
                <!-- Manual retry button -->
                <Button Name="ManualRetryButton" 
                        Grid.Column="3"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        BorderThickness="1"
                        CornerRadius="4"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="25"
                        Height="25"
                        ToolTip.Tip="{Binding RetryButtonTooltip}"
                        Command="{Binding RequestManualRetryCommand}"
                        IsEnabled="{Binding CanRetry}">
                    
                    <Button.Styles>
                        <Style Selector="Button">
                            <Style Selector="^:pointerover Path#RetryIcon">
                                <Setter Property="Fill" Value="#549639"/>
                            </Style>
                            <Style Selector="^:disabled Path#RetryIcon">
                                <Setter Property="Fill" Value="#404040"/>
                                <Setter Property="Opacity" Value="0.5"/>
                            </Style>
                        </Style>
                    </Button.Styles>
                    
                    <Panel>
                        <!-- Retry icon -->
                        <Path x:Name="RetryIcon"
                              Data="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6 0 1.66-.67 3.16-1.76 4.24l1.42 1.42A7.963 7.963 0 0020 12c0-4.42-3.58-8-8-8zm-6.24 1.76A7.963 7.963 0 004 12c0 4.42 3.58 8 8 8v3l4-4-4-4v3c-3.31 0-6-2.69-6-6 0-1.66.67-3.16 1.76-4.24L6.34 5.76z"
                              Fill="#84cd57"
                              Stretch="Uniform"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              IsVisible="{Binding !IsRetrying}" />
                        
                        <!-- Loading spinner when retrying -->
                        <Panel IsVisible="{Binding IsRetrying}"
                               Width="20" Height="20">
                            <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                  Fill="#84cd57"
                                  Stretch="Uniform"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="0" />
                                </Path.RenderTransform>
                                <Path.Styles>
                                    <Style Selector="Path">
                                        <Style.Animations>
                                            <Animation Duration="0:0:1" IterationCount="INFINITE">
                                                <KeyFrame Cue="0%">
                                                    <Setter Property="RotateTransform.Angle" Value="0" />
                                                </KeyFrame>
                                                <KeyFrame Cue="100%">
                                                    <Setter Property="RotateTransform.Angle" Value="360" />
                                                </KeyFrame>
                                            </Animation>
                                        </Style.Animations>
                                    </Style>
                                </Path.Styles>
                            </Path>
                        </Panel>
                    </Panel>
                </Button>
                
                <!-- Status indicator ellipse -->
                <Ellipse x:Name="StatusEllipse"
                         Grid.Column="3"
                         Width="6"
                         Height="6"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Right"
                         Margin="6,1,-2,0"
                         Fill="{Binding EllipseColor, ElementName=Root}" />
            </Grid>
            
            <!-- Retry progress bar -->
            <Grid Grid.Row="1" 
                  IsVisible="{Binding ShowRetryProgress}"
                  Margin="0,0,0,4">
                <ProgressBar Minimum="0" 
                             Maximum="100"
                             Value="{Binding RetryProgress}"
                             Height="3"
                             Background="#1a1a1a"
                             Foreground="Red"
                             IsIndeterminate="{Binding IsRetrying}">
                    <ProgressBar.Styles>
                        <Style Selector="ProgressBar:indeterminate /template/ Border#PART_Indicator">
                            <Style.Animations>
                                <Animation Duration="0:0:2" IterationCount="INFINITE">
                                    <KeyFrame Cue="0%">
                                        <Setter Property="TranslateTransform.X" Value="-100" />
                                    </KeyFrame>
                                    <KeyFrame Cue="100%">
                                        <Setter Property="TranslateTransform.X" Value="100" />
                                    </KeyFrame>
                                </Animation>
                            </Style.Animations>
                        </Style>
                    </ProgressBar.Styles>
                </ProgressBar>
                
                <!-- Next retry countdown -->
                <TextBlock Text="{Binding NextRetryText}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="9"
                           Foreground="#606060"
                           IsVisible="{Binding ShowNextRetryCountdown}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>