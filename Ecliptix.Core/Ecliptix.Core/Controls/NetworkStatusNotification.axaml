<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ecliptix.Core.Controls.NetworkStatusNotification"
             x:Name="Root">
    <Border x:Name="MainBorder"
            CornerRadius="8"
            Padding="12,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{Binding Background, ElementName=Root}">
    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
      
            <PathIcon x:Name="StatusIcon"
                      Grid.Column="0"
                      Width="20"
                      Height="20"
                      Foreground="White"
                      VerticalAlignment="Center"
                      Margin="0,0,8,0"
                      Data="{Binding IconData, ElementName=Root}"/>
      
            <TextBlock x:Name="StatusTextBlock"
                       Grid.Column="1"
                       Text="NO INTERNET CONNECTION"
                       Foreground="White"
                       FontWeight="Medium"
                       VerticalAlignment="Center"
                       TextWrapping="NoWrap"
                       />
      
            <Ellipse x:Name="StatusEllipse"
                     Grid.Column="2"
                     Width="6"
                     Height="6"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Right"
                     Margin="8,1,-2,0"
                     Fill="{Binding EllipseColor, ElementName=Root}" />
        </Grid>
    </Border>
</UserControl>  