<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:controls="clr-namespace:Ecliptix.Core.Controls"
             xmlns:core="clr-namespace:Ecliptix.Core.Controls.Core"
             mc:Ignorable="d"
             d:DesignWidth="320"
             d:DesignHeight="78"
             x:Class="Ecliptix.Core.Controls.Core.HintedTextBox"
             x:Name="control"
             x:CompileBindings="True"
             x:DataType="core:HintedTextBox"
             ClipToBounds="False">

    <UserControl.Resources>
        <!-- Layout Dimensions -->
        <x:Double x:Key="MinControlHeight">56</x:Double>
        <x:Double x:Key="MinTextBoxHeight">28</x:Double>
        <!-- IconSize now in Core/Dimensions.axaml as Icon.Size -->
        <x:Double x:Key="ScrollBarThumbWidth">10</x:Double>
        <!-- CounterFontSize and HintFontSize now in Core/Typography.axaml -->

        <!-- Border Thickness (Fixed to use Thickness type) -->
        <Thickness x:Key="FocusBorderThickness">1.5</Thickness>
        <Thickness x:Key="MainBorderThickness">0.5</Thickness>

        <!-- Spacing and Margins -->
        <Thickness x:Key="MainBorderMargin">0.75</Thickness>
        <Thickness x:Key="InnerPanelMargin">14,12,12,12</Thickness>
        <Thickness x:Key="TextBoxMargin">0,0,12,0</Thickness>
        <Thickness x:Key="CounterMargin">0,8,0,0</Thickness>
        <Thickness x:Key="HintSectionMargin">0,6,0,0</Thickness>
        <!-- IconMargin now in Core/Dimensions.axaml as Icon.Margin -->

        <!-- Corner Radius -->
        <CornerRadius x:Key="ScrollBarThumbRadius">5</CornerRadius>

        <!-- LampIconPath now in Core/Dimensions.axaml as LampIcon.Path -->

        <!-- Animation durations moved to shared Core/Animations.axaml -->

        <!-- Colors moved to Core/Colors.axaml -->
        <SolidColorBrush x:Key="CounterForegroundBrush">Gray</SolidColorBrush>
        
        <BoxShadows x:Key="DefaultShadow">0 0 0 0 #20000000</BoxShadows>
        <BoxShadows x:Key="FocusShadow">0 0 10 4 #406a5acd, 0 2 4 0 #20000000</BoxShadows>
        <BoxShadows x:Key="ErrorShadow">0 0 10 4 #40de1e31, 0 2 4 0 #20000000</BoxShadows>
        <BoxShadows x:Key="NoShadow">0 0 10 4 #00000000</BoxShadows>
        
        <!-- Password Strength Shadows -->
        <BoxShadows x:Key="InvalidStrengthShadow">0 0 10 4 #40ef3a3a, 0 2 4 0 #20000000</BoxShadows>
        <BoxShadows x:Key="VeryWeakStrengthShadow">0 0 10 4 #40ff6b35, 0 2 4 0 #20000000</BoxShadows>
        <BoxShadows x:Key="WeakStrengthShadow">0 0 10 4 #40ffa500, 0 2 4 0 #20000000</BoxShadows>
        <BoxShadows x:Key="GoodStrengthShadow">0 0 10 4 #40f4c20d, 0 2 4 0 #20000000</BoxShadows>
        <BoxShadows x:Key="StrongStrengthShadow">0 0 10 4 #4000bcd4, 0 2 4 0 #20000000</BoxShadows>
        <BoxShadows x:Key="VeryStrongStrengthShadow">0 0 10 4 #4032cd32, 0 2 4 0 #20000000</BoxShadows>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Watermark Styling -->
        <Style Selector="TextBox#MainTextBox /template/ TextBlock#PART_Watermark">
            <Setter Property="Foreground" Value="{Binding TextForeground, ElementName=control}" />
            <Setter Property="Opacity" Value="0.7" />
            <Setter Property="FontSize" Value="{Binding WatermarkFontSize, ElementName=control}" />
            <Setter Property="FontWeight" Value="Regular" />
        </Style>

        <!-- TextBox Focus Styling with Smooth Caret Animation -->
        <Style Selector="TextBox#MainTextBox">
            <Setter Property="FocusAdorner" Value="{x:Null}" />
            <Setter Property="CaretBrush" Value="{DynamicResource OnSurface}" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" Easing="CubicEaseInOut" />
                    <BrushTransition Property="CaretBrush" Duration="0:0:0.15" Easing="CubicEaseOut" />
                </Transitions>
            </Setter>
        </Style>

        <!-- Enhanced Caret Styling for better visibility -->
        <Style Selector="TextBox#MainTextBox:focus">
            <Setter Property="CaretBrush" Value="{DynamicResource OnSurface}" />
        </Style>

        <!-- Custom ScrollBar Styling -->
        <Style Selector="TextBox#MainTextBox ScrollBar:vertical">
            <Setter Property="Width" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Track Name="PART_Track"
                               Minimum="{TemplateBinding Minimum}"
                               Maximum="{TemplateBinding Maximum}"
                               Value="{TemplateBinding Value}"
                               ViewportSize="{TemplateBinding ViewportSize}">
                            <Track.Thumb>
                                <Thumb Name="PART_Thumb"
                                       Background="{DynamicResource ScrollBar.ThumbColor}"
                                       Width="{StaticResource ScrollBar.ThumbWidth}"
                                       CornerRadius="{StaticResource ScrollBar.ThumbRadius}">
                                    <Thumb.Styles>
                                        <Style Selector="Thumb:hover">
                                            <Setter Property="Background"
                                                    Value="{DynamicResource ScrollBar.ThumbHoverColor}" />
                                        </Style>
                                    </Thumb.Styles>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Icon Styling -->
        <Style Selector="Path.hint-icon">
            <Setter Property="Width" Value="{StaticResource Icon.Size}" />
            <Setter Property="Height" Value="{StaticResource Icon.Size}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="{StaticResource Icon.Margin}" />
            <Setter Property="Data" Value="{StaticResource LampIcon.Path}" />
            <Setter Property="Stretch" Value="Uniform" />
            <Setter Property="Fill" Value="{Binding HintForeground, ElementName=control}" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Fill" Duration="{StaticResource Brush.TransitionDuration}" />
                </Transitions>
            </Setter>
        </Style>

        <!-- Error Icon Styling -->
        <Style Selector="Path.error-icon">
            <Setter Property="Width" Value="{StaticResource Icon.Size}" />
            <Setter Property="Height" Value="{StaticResource Icon.Size}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="{StaticResource Icon.Margin}" />
            <Setter Property="Data" Value="{StaticResource LampIcon.Path}" />
            <Setter Property="Stretch" Value="Uniform" />
            <Setter Property="Fill" Value="{DynamicResource Error}" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Fill" Duration="{StaticResource Brush.TransitionDuration}" />
                </Transitions>
            </Setter>
        </Style>

        <!-- Password Strength Icon Styling -->
        <Style Selector="Path.strength-icon">
            <Setter Property="Width" Value="{StaticResource Icon.Size}" />
            <Setter Property="Height" Value="{StaticResource Icon.Size}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="{StaticResource Icon.Margin}" />
            <Setter Property="Data" Value="{StaticResource LampIcon.Path}" />
            <Setter Property="Stretch" Value="Uniform" />
            <Setter Property="Fill" Value="{Binding PasswordStrengthIconBrush, ElementName=control}" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Fill" Duration="{StaticResource Brush.TransitionDuration}" />
                </Transitions>
            </Setter>
        </Style>

        <!-- Hint Text Styling -->
        <Style Selector="TextBlock.hint-text">
            <Setter Property="FontSize" Value="{StaticResource Hint.FontSize}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="IsHitTestVisible" Value="False" />
        </Style>

        <!-- Error Text Styling -->
        <Style Selector="TextBlock.error-text">
            <Setter Property="FontSize" Value="{StaticResource Hint.FontSize}" />
            <Setter Property="Foreground" Value="{DynamicResource Error}" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="IsHitTestVisible" Value="False" />
        </Style>

        <!-- Counter Text Styling -->
        <Style Selector="TextBlock.counter-text">
            <Setter Property="FontSize" Value="{StaticResource Counter.FontSize}" />
            <Setter Property="Foreground" Value="{DynamicResource CounterForegroundBrush}" />
        </Style>

        <!-- Section Container Styling -->
        <Style Selector="StackPanel.hint-section">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Margin" Value="{StaticResource HintSectionMargin}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="{StaticResource Duration.Slow}" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="StackPanel.error-section">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Margin" Value="{StaticResource HintSectionMargin}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Background" Value="{Binding Background, ElementName=control}" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="{StaticResource Duration.Slow}" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="StackPanel.counter-section">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="{StaticResource CounterMargin}" />
        </Style>
        
        <Style Selector="TextBlock.password-mask-overlay">
            <Setter Property="Foreground" Value="{Binding TextForeground, ElementName=control}" />
            <Setter Property="FontSize" Value="{Binding FontSize, ElementName=control}" />
            <Setter Property="FontWeight" Value="{Binding FontWeight, ElementName=control}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="{StaticResource TextBoxMargin}" />
            <Setter Property="IsHitTestVisible" Value="False" />
        </Style>
        
        
    </UserControl.Styles>

    <UserControl.Transitions>
        <Transitions>
            <DoubleTransition Property="Opacity" Duration="{StaticResource Duration.Slower}" />
        </Transitions>
    </UserControl.Transitions>

    <Grid ClipToBounds="False">
        
        <Border x:Name="ShadowBorder"
                Margin="{StaticResource MainBorderMargin}"
                CornerRadius="{Binding CornerRadius, ElementName=control}"
                MinHeight="{StaticResource MinControlHeight}"
                Background="Transparent"
                BoxShadow="{StaticResource DefaultShadow}">
            <Border.Transitions>
                <Transitions>
                    <BoxShadowsTransition Property="BoxShadow" Duration="{StaticResource Input.ShadowDuration}" />
                </Transitions>
            </Border.Transitions>
        </Border>
        
        <!-- Focus Border Layer -->
        <Border x:Name="FocusBorder"
                BorderThickness="{StaticResource FocusBorderThickness}"
                BorderBrush="{Binding FocusBorderBrush, ElementName=control}"
                Background="Transparent"
                CornerRadius="{Binding CornerRadius, ElementName=control}"
                Opacity="0">
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="{StaticResource Input.OpacityDuration}" />
                    <BrushTransition Property="BorderBrush" Duration="{StaticResource Brush.TransitionDuration}" />
                </Transitions>
            </Border.Transitions>
        </Border>

        <!-- Main Content Border -->
        <Border x:Name="MainBorder"
                Margin="{StaticResource MainBorderMargin}"
                BorderThickness="{StaticResource MainBorderThickness}"
                BorderBrush="{Binding MainBorderBrush, ElementName=control}"
                CornerRadius="{Binding CornerRadius, ElementName=control}"
                MinHeight="{StaticResource MinControlHeight}"
                Background="{Binding Background, ElementName=control}">
            <Border.Transitions>
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="{StaticResource Brush.TransitionDuration}" />
                </Transitions>
            </Border.Transitions>

            <!-- Content Panel -->
            <Panel Margin="{StaticResource InnerPanelMargin}">
                <Grid VerticalAlignment="Stretch"
                      RowDefinitions="*,Auto">

                    <!-- Text Input Area -->
                    <Grid Grid.Row="0">
                        <!-- Main TextBox -->
                        <TextBox x:Name="MainTextBox"
                                 Watermark="{Binding Watermark, ElementName=control}"
                                 Text="{Binding Text, ElementName=control, Mode=TwoWay}"
                                 Foreground="{Binding TextForeground, ElementName=control}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0"
                                 Margin="{StaticResource TextBoxMargin}"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 VerticalContentAlignment="Center"
                                 FontSize="{Binding FontSize, ElementName=control}"
                                 FontWeight="{Binding FontWeight, ElementName=control}"
                                 MinHeight="{StaticResource MinTextBoxHeight}"
                                 TextWrapping="{Binding TextWrapping, ElementName=control}"
                                 MaxLength="{Binding MaxLength, ElementName=control}" />

                        <TextBlock x:Name="PasswordMaskOverlay"
                                   Classes="password-mask-overlay"
                                   IsVisible="{Binding IsSecureKeyMode, ElementName=control}" />
                        
                        <!-- Character Counter -->
                        <StackPanel Grid.Row="0"
                                    x:Name="CounterPanel"
                                    Classes="counter-section"
                                    IsVisible="{Binding ShowCharacterCounter, ElementName=control}">
                            <TextBlock Text="{Binding RemainingCharacters, ElementName=control}"
                                       Classes="counter-text" />
                        </StackPanel>
                    </Grid>

                    <!-- Hint Section (Normal State) -->
                    <StackPanel x:Name="HintStackPanel"
                                Grid.Row="1"
                                Classes="hint-section"
                                IsVisible="{Binding !IsPasswordStrengthMode, ElementName=control}">
                        <Path Classes="hint-icon" />
                        <TextBlock x:Name="HintTextBlock"
                                   Text="{Binding Hint, ElementName=control}"
                                   Foreground="{Binding HintForeground, ElementName=control}"
                                   Classes="hint-text" />
                    </StackPanel>

                    <!-- Error Section -->
                    <StackPanel Grid.Row="1"
                                x:Name="ErrorStackPanel"
                                Classes="error-section"
                                Opacity="{Binding EllipseOpacity, ElementName=control}">
                        <Path Classes="error-icon" />
                        <TextBlock Text="{Binding ErrorText, ElementName=control}"
                                   Classes="error-text" />
                    </StackPanel>
                    
                    <!-- Password Strength Section -->
                    <StackPanel Grid.Row="1"
                                x:Name="PasswordStrengthStackPanel"
                                Classes="hint-section"
                                IsVisible="{Binding IsPasswordStrengthMode, ElementName=control}">
                        <Path Classes="strength-icon" />
                        <TextBlock x:Name="PasswordStrengthTextBlock"
                                   Text="{Binding PasswordStrengthText, ElementName=control}"
                                   Foreground="{Binding PasswordStrengthTextBrush, ElementName=control}"
                                   Classes="hint-text" />
                    </StackPanel>
                </Grid>
            </Panel>
        </Border>
    </Grid>
</UserControl>