<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Ecliptix.Core.Controls"
             xmlns:core="clr-namespace:Ecliptix.Core.Controls.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ecliptix.Core.Controls.Core.ConnectivityNotificationView"
             x:Name="Root"
             x:DataType="core:ConnectivityNotificationViewModel">
    
    <Border x:Name="MainBorder"
            CornerRadius="12"
            Padding="12,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{Binding Background, ElementName=Root}">
        
        <Border.Styles>
            <Style Selector="Border.CircuitOpen">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                            <GradientStop Color="#3a1f1f" Offset="0" />
                            <GradientStop Color="#2f2f2f" Offset="1" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style Selector="Border.Retrying">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                            <GradientStop Color="#2f3a1f" Offset="0" />
                            <GradientStop Color="#2f2f2f" Offset="1" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>
        </Border.Styles>

        <Grid ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Connection icon -->
            <Image x:Name="StatusIcon"
                   Width="30" 
                   Height="30" 
                   Grid.Column="0"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Source="{Binding StatusIconSource}"
                   Stretch="Uniform" />

            <!-- Status text labels -->
            <StackPanel Grid.Column="1" 
                        Spacing="2" 
                        VerticalAlignment="Center">
                <TextBlock x:Name="StatusTextBlock"
                           Foreground="White"
                           FontWeight="Medium"
                           FontSize="13"
                           TextWrapping="NoWrap"
                           Text="{Binding StatusText}" />
                
                <TextBlock x:Name="StatusDescriptionTextBlock"
                           Foreground="#a9a9a9"
                           FontWeight="Regular"
                           FontSize="11"
                           TextWrapping="NoWrap"
                           Text="{Binding StatusDescription}" />
            </StackPanel>
            
            <!-- Retry button -->
            <Button x:Name="RetryButton" 
                    Grid.Column="2"
                    Background="#2d2d2d"
                    BorderBrush="#404040"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12,6"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.ColumnSpan="2"
                    Command="{Binding RetryCommand}"
                    IsVisible="{Binding ShowRetryButton}">
                
                <Button.Styles>
                    <Style Selector="Button">
                        <Setter Property="Foreground" Value="#84cd57"/>
                        <Style Selector="^:pointerover">
                            <Setter Property="Background" Value="#3a3a3a"/>
                            <Setter Property="BorderBrush" Value="#549639"/>
                        </Style>
                        <Style Selector="^:pressed">
                            <Setter Property="Background" Value="#1f1f1f"/>
                        </Style>
                    </Style>
                </Button.Styles>
                
                <TextBlock Text="{Binding RetryButtonText}" 
                           FontSize="11"
                           FontWeight="Medium" />
            </Button>
            
            <!-- Status indicator dot with pulse animation -->
            <Ellipse x:Name="StatusDot"
                     Grid.Column="3"
                     Width="8"
                     Height="8"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Right"
                     Fill="#d81c1c">
                <Ellipse.Styles>
                    <Style Selector="Ellipse">
                        <Style.Animations>
                            <Animation Duration="0:0:1.5" IterationCount="INFINITE">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0.3" />
                                    <Setter Property="ScaleTransform.ScaleX" Value="1.0" />
                                    <Setter Property="ScaleTransform.ScaleY" Value="1.0" />
                                </KeyFrame>
                                <KeyFrame Cue="50%">
                                    <Setter Property="Opacity" Value="1.0" />
                                    <Setter Property="ScaleTransform.ScaleX" Value="1.2" />
                                    <Setter Property="ScaleTransform.ScaleY" Value="1.2" />
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="0.3" />
                                    <Setter Property="ScaleTransform.ScaleX" Value="1.0" />
                                    <Setter Property="ScaleTransform.ScaleY" Value="1.0" />
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Ellipse.Styles>
                <Ellipse.RenderTransform>
                    <ScaleTransform />
                </Ellipse.RenderTransform>
            </Ellipse>
        </Grid>
    </Border>
</UserControl>