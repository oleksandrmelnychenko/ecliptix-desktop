<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:modals="clr-namespace:Ecliptix.Core.Controls.Modals"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
             x:DataType="modals:DetectLanguageDialogViewModel"
             x:Class="Ecliptix.Core.Controls.Modals.DetectLanguageDialog">

    <UserControl.Resources>
        <x:Double x:Key="ButtonHeight">44</x:Double>
        <x:Double x:Key="TitleFontSize">22</x:Double>
        <x:Double x:Key="SubtitleFontSize">17</x:Double>
        <CornerRadius x:Key="ButtonCornerRadius">12</CornerRadius>
        <Color x:Key="GrayButtonHoverColor">#F5F5F5</Color>
        <Color x:Key="DarkButtonHoverColor">#262626</Color>
        <system:TimeSpan x:Key="ButtonTransitionDuration">0:0:0.25</system:TimeSpan>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Button.modal-button">
            <Setter Property="Height" Value="{StaticResource ButtonHeight}" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="{StaticResource ButtonCornerRadius}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="{StaticResource ButtonTransitionDuration}"
                                     Easing="CubicEaseOut" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.modal-button.secondary">
            <Setter Property="Background" Value="{DynamicResource BackButtonBackgroundColor}" />
            <Setter Property="Foreground" Value="{DynamicResource LightButtonForegroundColor}" />
        </Style>
        <Style Selector="Button.modal-button.secondary:pointerover">
            <Setter Property="Background" Value="{StaticResource GrayButtonHoverColor}" />
        </Style>
        <Style Selector="Button.modal-button.primary">
            <Setter Property="Background" Value="{DynamicResource DarkButtonColor}" />
            <Setter Property="Foreground" Value="{DynamicResource DarkButtonForegroundColor}" />
        </Style>
        <Style Selector="Button.modal-button.primary:pointerover">
            <Setter Property="Background" Value="{StaticResource DarkButtonHoverColor}" />
        </Style>
    </UserControl.Styles>

    <Border 
        Padding="24"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid 
            RowDefinitions="Auto, Auto, Auto ,Auto"
            RowSpacing="24">
            <TextBlock
                Grid.Row="0"
                TextWrapping="Wrap"
                FontSize="{StaticResource TitleFontSize}"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Text="{Binding Title}" />
            <StackPanel
                Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Spacing="8">
                <Svg
                    Path="{Binding FlagPath}"
                    VerticalAlignment="Center"
                    Width="22"
                    Height="22" />
                <TextBlock
                    x:Name="PromptText"
                    FontSize="{StaticResource SubtitleFontSize}"
                    VerticalAlignment="Center"
                    Text="{Binding PromptText}" />
            </StackPanel>
            <Grid Grid.Row="2">
                <Image Source="avares://Ecliptix.Core/Assets/Animations/language.gif"
                       Width="126" 
                       Height="96"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </Grid>
            <Grid
                Grid.Row="3"
                ColumnDefinitions="*,*"
                ColumnSpacing="12"
                >
                <Button
                    Grid.Column="0"
                    x:Name="DeclineButton"
                    Content="{Binding DeclineButtonText}"
                    Command="{Binding DeclineCommand}"
                    Classes="modal-button secondary" />
                <Button
                    Grid.Column="1"
                    x:Name="ConfirmButton"
                    Content="{Binding ConfirmButtonText}"
                    Command="{Binding ConfirmCommand}"
                    Classes="modal-button primary" />
            </Grid>
        </Grid>
    </Border>
</UserControl>