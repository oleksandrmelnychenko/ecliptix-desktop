<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ecliptix.Core.Controls.HintedTextBox"
             x:Name="control">
    <!-- TODO -->
    <UserControl.Styles>
        <Style Selector="TextBox#MainTextBox /template/ TextBlock#PART_Watermark">
            <Setter Property="Foreground" Value="{Binding TextForeground, ElementName=control}" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        
        <Style Selector="TextBox#MainTextBox">
            <Setter Property="FocusAdorner" Value="{x:Null}" />
        </Style>
        
        <Style Selector="TextBox#MainTextBox ScrollBar:vertical">
            <Setter Property="Width" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Track Name="PART_Track"
                               Minimum="{TemplateBinding Minimum}"
                               Maximum="{TemplateBinding Maximum}"
                               Value="{TemplateBinding Value}"
                               ViewportSize="{TemplateBinding ViewportSize}">
                            <Track.Thumb>
                                <Thumb Name="PART_Thumb"
                                       Background="Red"
                                       Width="10"
                                       CornerRadius="5">
                                    <Thumb.Styles>
                                        <Style Selector="Thumb:hover">
                                            <Setter Property="Background" Value="#AA0000" />
                                        </Style>
                                    </Thumb.Styles>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

    </UserControl.Styles>

    <UserControl.Transitions>
        <Transitions>
            <DoubleTransition Property="Opacity" Duration="0:0:0.5" />
        </Transitions>
    </UserControl.Transitions>
    
    <Grid>
        <Border
            x:Name="FocusBorder"
            BorderThickness="2"
            BorderBrush="#6a5acd"
            Background="Transparent"
            CornerRadius="15"
            Opacity="0">
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                </Transitions>
            </Border.Transitions>
        </Border>

        <Border
            x:Name="MainBorder"
            Margin="1"
            BorderThickness="1"
            BorderBrush="{Binding MainBorderBrush, ElementName=control}"
            CornerRadius="15"
            MinHeight="64"
            Background="{Binding Background, ElementName=control}">
            <Border.Transitions>
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                </Transitions>
            </Border.Transitions>

            <Panel Margin="12 15 8 15 ">
                <Grid VerticalAlignment="Stretch" RowDefinitions="*,Auto">
                    <Grid Grid.Row="0">
                        <Grid ColumnDefinitions="Auto,*">
                            <TextBox
                                x:Name="MainTextBox"
                                Grid.Column="1"
                                Watermark="{Binding Watermark, ElementName=control}"
                                Text="{Binding Text, ElementName=control, Mode=TwoWay}"
                                PasswordChar="{Binding PasswordChar, ElementName=control}"
                                Foreground="{Binding TextForeground, ElementName=control}"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                Margin="0 0 10 0"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                                VerticalContentAlignment="Top"
                                FontSize="{Binding FontSize, ElementName=control}"
                                FontWeight="{Binding FontWeight, ElementName=control}"
                                MinHeight="32"
                                MinWidth="32"
                                TextWrapping="{Binding TextWrapping, ElementName=control}"
                                MaxLength="{Binding MaxLength, ElementName=control}" 
                                />
                        </Grid>
                    </Grid>

                    <StackPanel Grid.Row="0" x:Name="CounterPanel"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0"
                                IsVisible="{Binding ShowCharacterCounter, ElementName=control}">
                        <TextBlock Text="{Binding RemainingCharacters, ElementName=control}" FontSize="12"
                                   Foreground="Gray" />
                    </StackPanel>
                    <StackPanel x:Name="HintStackPanel" 
                                Grid.Row="1"
                                Orientation="Horizontal"
                                Margin="2,4,0,0"
                                VerticalAlignment="Center">
                        <StackPanel.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:0.3" />
                            </Transitions>
                        </StackPanel.Transitions>
                        
                        <Svg x:Name="IconElement"
                             Path="{Binding IconSource, ElementName=control}"
                             Height="19"
                             Width="19"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Css=".Purple { fill: #9966cc; }">
                        </Svg>

                        <TextBlock x:Name="HintTextBlock"
                                   Text="{Binding Hint, ElementName=control}"
                                   Foreground="{Binding HintForeground, ElementName=control}"
                                   FontSize="13"
                                   VerticalAlignment="Bottom"
                                   IsHitTestVisible="False"
                                   
                                   />
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" 
                        Orientation="Horizontal"
                        Margin="2,4,0,0"
                        x:Name="ErrorStackPanel"
                        Opacity="{Binding EllipseOpacity, ElementName=control}"
                        Background="{Binding Background, ElementName=control}">
                        <StackPanel.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:0.3" />
                            </Transitions>
                        </StackPanel.Transitions>

                        <Image Width="19" 
                               Height="19" 
                               VerticalAlignment="Bottom" 
                               HorizontalAlignment="Center">
                            <Image.Source>
                                <DrawingImage>
                                    <DrawingImage.Drawing>
                                        <DrawingGroup ClipGeometry="M0,0 V24 H24 V0 H0 Z">
                                            <GeometryDrawing Brush="#ef3a3a" Geometry="F0 M24,24z M0,0z M15.0615,1.60897C13.3515,0.900679 11.4489,0.807208 9.67774,1.34448 7.90659,1.88175 6.37653,3.01652 5.34826,4.55544 4.31998,6.09436 3.85712,7.94221 4.03853,9.78414 4.11726,10.5835 4.31522,11.3603 4.62105,12.0905 4.96903,12.9213 5.41848,13.7021 5.83158,14.4197L5.92971,14.5903C6.00925,14.7287,6.08722,14.8651,6.16325,15L8.43164,15C8.18574,14.5071,7.91932,14.0386,7.66392,13.594L7.57854,13.4455C7.15208,12.704 6.76306,12.0276 6.46579,11.3178 6.23641,10.7702 6.08795,10.1876 6.0289,9.58811 5.89284,8.20666 6.23999,6.82077 7.0112,5.66658 7.7824,4.51239 8.92995,3.66131 10.2583,3.25836 11.5867,2.85541 13.0136,2.92551 14.2961,3.45673 15.5786,3.98794 16.6372,4.9474 17.2915,6.17162 17.9459,7.39585 18.1555,8.80908 17.8847,10.1705 17.6139,11.532 16.8794,12.7574 15.8064,13.6381 14.7333,14.5187 13.3881,15 12,15L12,17C12.9377,17,13.8607,16.8353,14.7293,16.5201L12.8244,20.7697 12.8235,20.7717C12.4745,21.5356,11.3955,21.5549,11.0196,20.8031L9.11806,17 6.88199,17 9.23077,21.6976C10.3594,23.9547,13.6009,23.8947,14.6452,21.5973L14.6473,21.5926 17.8419,14.4656C18.8563,13.3814 19.5539,12.0305 19.8463,10.5607 20.2074,8.74545 19.9279,6.86113 19.0554,5.22883 18.1829,3.59653 16.7714,2.31725 15.0615,1.60897z" />
                                        </DrawingGroup>
                                    </DrawingImage.Drawing>
                                </DrawingImage>
                            </Image.Source>
                        </Image>

                        <TextBlock
                            FontSize="13"
                            Foreground="#ef3a3a"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            IsHitTestVisible="False"
                            Text="{Binding ErrorText, ElementName=control}">
                        </TextBlock>
                    </StackPanel>
                </Grid>
                
                   
               

            </Panel>


        </Border>
    </Grid>


</UserControl>