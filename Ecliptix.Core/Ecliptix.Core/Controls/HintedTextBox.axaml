<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ecliptix.Core.Controls.HintedTextBox"
             x:Name="control">
    <!-- TODO -->
    <UserControl.Styles>
        <Style Selector="TextBox#MainTextBox ScrollBar:vertical">
            <Setter Property="Width" Value="0" />
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Track Name="PART_Track"
                               Minimum="{TemplateBinding Minimum}"
                               Maximum="{TemplateBinding Maximum}"
                               Value="{TemplateBinding Value}"
                               ViewportSize="{TemplateBinding ViewportSize}">
                            <Track.Thumb>
                                <Thumb Name="PART_Thumb"
                                       Background="Red"
                                       Width="10"
                                       CornerRadius="5">
                                    <Thumb.Styles>
                                        <Style Selector="Thumb:hover">
                                            <Setter Property="Background" Value="#AA0000"/>
                                        </Style>
                                    </Thumb.Styles>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

    </UserControl.Styles>
    
    <Grid>
        <Border
            x:Name="FocusBorder"
            BorderThickness="2"
            BorderBrush="#6a5acd"
            Background="Transparent"
            CornerRadius="15"
            Opacity="0"
            >
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                </Transitions>
            </Border.Transitions>
        </Border>

        <Border
            x:Name="MainBorder"
            Margin="1"
            BorderThickness="1"
            BorderBrush="{Binding MainBorderBrush, ElementName=control}"
            CornerRadius="15"
            MinHeight="64"
            Background="White">
            <Border.Transitions>
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                </Transitions>
            </Border.Transitions>

            <Panel Margin="8">
                <Grid VerticalAlignment="Stretch" RowDefinitions="*,Auto">
                    <Grid Grid.Row="0">
                        <Grid ColumnDefinitions="Auto,*">
                            <TextBox
                                x:Name="MainTextBox"
                                Grid.Column="1"
                                Watermark="{Binding Watermark, ElementName=control}"
                                Text="{Binding Text, ElementName=control, Mode=TwoWay}"
                                PasswordChar="{Binding PasswordChar, ElementName=control}"
                                Foreground="{Binding TextForeground, ElementName=control}"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                Margin="0 0 10 0"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                FontSize="14"
                                MinHeight="32"
                                MinWidth="32"
                                TextWrapping="{Binding TextWrapping, ElementName=control}"
                                MaxLength="{Binding MaxLength, ElementName=control}" 
                                />
                        </Grid>
                    </Grid>

                    <StackPanel Grid.Row="0" x:Name="CounterPanel" 
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0"
                                IsVisible="{Binding ShowCharacterCounter, ElementName=control}"
                                >
                        <TextBlock Text="{Binding RemainingCharacters, ElementName=control}" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                    <StackPanel x:Name="HintStackPanel" Grid.Row="1" Orientation="Horizontal" Margin="2,4,0,0">
                        <StackPanel.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:0.3" />
                            </Transitions>
                        </StackPanel.Transitions>
                        <Svg x:Name="IconElement"
                             Path="{Binding IconSource, ElementName=control}"
                             Height="12"
                             Width="12"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Margin="0,0,5,0"
                             Css=".Purple { fill: #6a5acd; }">
                            <!-- <Svg.Styles> -->
                            <!--     <Style Selector="Path"> -->
                            <!--         <Setter Property="Fill" Value="#6a5acd" /> -->
                            <!--     </Style> -->
                            <!-- </Svg.Styles> -->
                        </Svg>

                        <TextBlock x:Name="HintTextBlock"
                                   Text="{Binding Hint, ElementName=control}"
                                   Foreground="{Binding HintForeground, ElementName=control}"
                                   FontSize="12"
                                   IsHitTestVisible="False"
                                   />
                    </StackPanel>

                </Grid>
                <Grid RowDefinitions="*, *">
                    <Ellipse Grid.Row="0"
                             Width="9"
                             Height="9"
                             Fill="#ef3a3a"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Top"
                             Margin="0,0,0,0"
                             Opacity="{Binding EllipseOpacity, ElementName=control}">
                        <Ellipse.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                            </Transitions>
                        </Ellipse.Transitions>
                    </Ellipse>

                    <TextBlock Grid.Row="1"
                               FontSize="12"
                               Foreground="#ef3a3a"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Text="{Binding ErrorText, ElementName=control}"
                               Opacity="{Binding EllipseOpacity, ElementName=control}">
                        <TextBlock.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                            </Transitions>
                        </TextBlock.Transitions>
                    </TextBlock>
                </Grid>

            </Panel>


        </Border>
    </Grid>
    
    
   
</UserControl>