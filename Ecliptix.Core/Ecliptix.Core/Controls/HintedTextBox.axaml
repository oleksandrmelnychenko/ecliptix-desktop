<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d"
             d:DesignWidth="320"
             d:DesignHeight="78"
             x:Class="Ecliptix.Core.Controls.HintedTextBox"
             x:Name="control"
             ClipToBounds="False">

    <UserControl.Resources>
        <!-- Layout Dimensions -->
        <x:Double x:Key="MinControlHeight">56</x:Double>
        <x:Double x:Key="MinTextBoxHeight">28</x:Double>
        <x:Double x:Key="IconSize">16</x:Double>
        <x:Double x:Key="ScrollBarThumbWidth">10</x:Double>
        <x:Double x:Key="CounterFontSize">11</x:Double>
        <x:Double x:Key="HintFontSize">12</x:Double>

        <!-- Border Thickness (Fixed to use Thickness type) -->
        <Thickness x:Key="FocusBorderThickness">1.5</Thickness>
        <Thickness x:Key="MainBorderThickness">0.5</Thickness>

        <!-- Spacing and Margins -->
        <Thickness x:Key="MainBorderMargin">0.75</Thickness>
        <Thickness x:Key="InnerPanelMargin">14,12,12,12</Thickness>
        <Thickness x:Key="TextBoxMargin">0,0,12,0</Thickness>
        <Thickness x:Key="CounterMargin">0,8,0,0</Thickness>
        <Thickness x:Key="HintSectionMargin">0,6,0,0</Thickness>
        <Thickness x:Key="IconMargin">0,0,6,0</Thickness>

        <!-- Corner Radius -->
        <CornerRadius x:Key="ScrollBarThumbRadius">5</CornerRadius>

        <!-- Transitions -->
        <system:TimeSpan x:Key="OpacityTransitionDuration">0:0:0.25</system:TimeSpan>
        <system:TimeSpan x:Key="SlowOpacityTransition">0:0:0.3</system:TimeSpan>
        <system:TimeSpan x:Key="VerySlowOpacityTransition">0:0:0.4</system:TimeSpan>
        <system:TimeSpan x:Key="BrushTransitionDuration">0:0:0.25</system:TimeSpan>
        <system:TimeSpan x:Key="ShadowTransitionDuration">0:0:0.3</system:TimeSpan>

        <!-- Colors -->
        <Color x:Key="ErrorForegroundColor">#ef3a3a</Color>
        <Color x:Key="ScrollBarThumbColor">Red</Color>
        <Color x:Key="ScrollBarThumbHoverColor">#AA0000</Color>
        <SolidColorBrush x:Key="CounterForegroundBrush">Gray</SolidColorBrush>
        
        <BoxShadows x:Key="DefaultShadow">0 0 0 0 #20000000</BoxShadows>
        <BoxShadows x:Key="FocusShadow">0 0 10 4 #406a5acd, 0 2 4 0 #20000000</BoxShadows>
        <BoxShadows x:Key="ErrorShadow">0 0 10 4 #40de1e31, 0 2 4 0 #20000000</BoxShadows>
        <BoxShadows x:Key="NoShadow">0 0 10 4 #00000000</BoxShadows>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Watermark Styling -->
        <Style Selector="TextBox#MainTextBox /template/ TextBlock#PART_Watermark">
            <Setter Property="Foreground" Value="{Binding TextForeground, ElementName=control}" />
            <Setter Property="Opacity" Value="0.7" />
            <Setter Property="FontSize" Value="{Binding WatermarkFontSize, ElementName=control}" />
            <Setter Property="FontWeight" Value="Regular" />
        </Style>

        <!-- TextBox Focus Styling -->
        <Style Selector="TextBox#MainTextBox">
            <Setter Property="FocusAdorner" Value="{x:Null}" />
        </Style>

        <!-- Custom ScrollBar Styling -->
        <Style Selector="TextBox#MainTextBox ScrollBar:vertical">
            <Setter Property="Width" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Track Name="PART_Track"
                               Minimum="{TemplateBinding Minimum}"
                               Maximum="{TemplateBinding Maximum}"
                               Value="{TemplateBinding Value}"
                               ViewportSize="{TemplateBinding ViewportSize}">
                            <Track.Thumb>
                                <Thumb Name="PART_Thumb"
                                       Background="{StaticResource ScrollBarThumbColor}"
                                       Width="{StaticResource ScrollBarThumbWidth}"
                                       CornerRadius="{StaticResource ScrollBarThumbRadius}">
                                    <Thumb.Styles>
                                        <Style Selector="Thumb:hover">
                                            <Setter Property="Background"
                                                    Value="{StaticResource ScrollBarThumbHoverColor}" />
                                        </Style>
                                    </Thumb.Styles>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Icon Styling -->
        <Style Selector="Image.hint-icon">
            <Setter Property="Width" Value="{StaticResource IconSize}" />
            <Setter Property="Height" Value="{StaticResource IconSize}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="{StaticResource IconMargin}" />
        </Style>

        <!-- Hint Text Styling -->
        <Style Selector="TextBlock.hint-text">
            <Setter Property="FontSize" Value="{StaticResource HintFontSize}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="IsHitTestVisible" Value="False" />
        </Style>

        <!-- Error Text Styling -->
        <Style Selector="TextBlock.error-text">
            <Setter Property="FontSize" Value="{StaticResource HintFontSize}" />
            <Setter Property="Foreground" Value="{StaticResource ErrorForegroundColor}" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="IsHitTestVisible" Value="False" />
        </Style>

        <!-- Counter Text Styling -->
        <Style Selector="TextBlock.counter-text">
            <Setter Property="FontSize" Value="{StaticResource CounterFontSize}" />
            <Setter Property="Foreground" Value="{StaticResource CounterForegroundBrush}" />
        </Style>

        <!-- Section Container Styling -->
        <Style Selector="StackPanel.hint-section">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Margin" Value="{StaticResource HintSectionMargin}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="{StaticResource SlowOpacityTransition}" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="StackPanel.error-section">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Margin" Value="{StaticResource HintSectionMargin}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Background" Value="{Binding Background, ElementName=control}" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="{StaticResource SlowOpacityTransition}" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="StackPanel.counter-section">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="{StaticResource CounterMargin}" />
        </Style>
        
        <Style Selector="TextBlock.password-mask-overlay">
            <Setter Property="Foreground" Value="{Binding TextForeground, ElementName=control}" />
            <Setter Property="FontSize" Value="{Binding FontSize, ElementName=control}" />
            <Setter Property="FontWeight" Value="{Binding FontWeight, ElementName=control}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="{StaticResource TextBoxMargin}" />
            <Setter Property="IsHitTestVisible" Value="False" />
        </Style>
        
        
    </UserControl.Styles>

    <UserControl.Transitions>
        <Transitions>
            <DoubleTransition Property="Opacity" Duration="{StaticResource VerySlowOpacityTransition}" />
        </Transitions>
    </UserControl.Transitions>

    <Grid ClipToBounds="False">
        
        <Border x:Name="ShadowBorder"
                Margin="{StaticResource MainBorderMargin}"
                CornerRadius="{Binding CornerRadius, ElementName=control}"
                MinHeight="{StaticResource MinControlHeight}"
                Background="Transparent"
                BoxShadow="{StaticResource DefaultShadow}">
            <Border.Transitions>
                <Transitions>
                    <BoxShadowsTransition Property="BoxShadow" Duration="{StaticResource ShadowTransitionDuration}" />
                </Transitions>
            </Border.Transitions>
        </Border>
        
        <!-- Focus Border Layer -->
        <Border x:Name="FocusBorder"
                BorderThickness="{StaticResource FocusBorderThickness}"
                BorderBrush="{Binding FocusBorderBrush, ElementName=control}"
                Background="Transparent"
                CornerRadius="{Binding CornerRadius, ElementName=control}"
                Opacity="0">
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="{StaticResource OpacityTransitionDuration}" />
                    <BrushTransition Property="BorderBrush" Duration="{StaticResource BrushTransitionDuration}" />
                </Transitions>
            </Border.Transitions>
        </Border>

        <!-- Main Content Border -->
        <Border x:Name="MainBorder"
                Margin="{StaticResource MainBorderMargin}"
                BorderThickness="{StaticResource MainBorderThickness}"
                BorderBrush="{Binding MainBorderBrush, ElementName=control}"
                CornerRadius="{Binding CornerRadius, ElementName=control}"
                MinHeight="{StaticResource MinControlHeight}"
                Background="{Binding Background, ElementName=control}">
            <Border.Transitions>
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="{StaticResource BrushTransitionDuration}" />
                </Transitions>
            </Border.Transitions>

            <!-- Content Panel -->
            <Panel Margin="{StaticResource InnerPanelMargin}">
                <Grid VerticalAlignment="Stretch"
                      RowDefinitions="*,Auto">

                    <!-- Text Input Area -->
                    <Grid Grid.Row="0">
                        <!-- Main TextBox -->
                        <TextBox x:Name="MainTextBox"
                                 Watermark="{Binding Watermark, ElementName=control}"
                                 Text="{Binding Text, ElementName=control, Mode=TwoWay}"
                                 Foreground="{Binding TextForeground, ElementName=control}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0"
                                 Margin="{StaticResource TextBoxMargin}"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 VerticalContentAlignment="Center"
                                 FontSize="{Binding FontSize, ElementName=control}"
                                 FontWeight="{Binding FontWeight, ElementName=control}"
                                 MinHeight="{StaticResource MinTextBoxHeight}"
                                 TextWrapping="{Binding TextWrapping, ElementName=control}"
                                 MaxLength="{Binding MaxLength, ElementName=control}" />

                        <TextBlock x:Name="PasswordMaskOverlay"
                                   Classes="password-mask-overlay"
                                   IsVisible="{Binding IsPasswordMode, ElementName=control}" />
                        
                        <!-- Character Counter -->
                        <StackPanel Grid.Row="0"
                                    x:Name="CounterPanel"
                                    Classes="counter-section"
                                    IsVisible="{Binding ShowCharacterCounter, ElementName=control}">
                            <TextBlock Text="{Binding RemainingCharacters, ElementName=control}"
                                       Classes="counter-text" />
                        </StackPanel>
                    </Grid>

                    <!-- Hint Section (Normal State) -->
                    <StackPanel x:Name="HintStackPanel"
                                Grid.Row="1"
                                Classes="hint-section">
                        <Image Source="{Binding IconRegularSource, ElementName=control}"
                               Classes="hint-icon" />
                        <TextBlock x:Name="HintTextBlock"
                                   Text="{Binding Hint, ElementName=control}"
                                   Foreground="{Binding HintForeground, ElementName=control}"
                                   Classes="hint-text" />
                    </StackPanel>

                    <!-- Error Section -->
                    <StackPanel Grid.Row="1"
                                x:Name="ErrorStackPanel"
                                Classes="error-section"
                                Opacity="{Binding EllipseOpacity, ElementName=control}">
                        <Image Source="{Binding IconErrorSource, ElementName=control}"
                               Classes="hint-icon" />
                        <TextBlock Text="{Binding ErrorText, ElementName=control}"
                                   Classes="error-text" />
                    </StackPanel>
                </Grid>
            </Panel>
        </Border>
    </Grid>
</UserControl>