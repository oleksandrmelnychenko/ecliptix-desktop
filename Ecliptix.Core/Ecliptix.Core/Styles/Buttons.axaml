<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector="Button.SubmitButton">
        <Setter Property="Background" Value="{DynamicResource PrimaryButtonColorBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryButtonForeground}" />
        <Setter Property="Height" Value="45" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Button.SubmitButton:pointerover">
        <Setter Property="Background" Value="{DynamicResource PrimaryHoverButtonColorBrush}" />
    </Style>


</Styles>