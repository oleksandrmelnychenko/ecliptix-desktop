<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles.Resources>
        <ResourceDictionary>
            <!-- ===== TYPOGRAPHY RESOURCES ===== -->
            <!-- Standardized font system eliminating all font size duplications -->

            <!-- ===== FONT SCALE ===== -->
            <!-- Harmonious font scale based on 1.125 ratio -->
            <x:Double x:Key="Font.XS">9</x:Double>        <!-- Version info -->
            <x:Double x:Key="Font.S">11</x:Double>        <!-- Footer, captions -->
            <x:Double x:Key="Font.M">12</x:Double>        <!-- Small body text -->
            <x:Double x:Key="Font.L">14</x:Double>        <!-- Body text, buttons -->
            <x:Double x:Key="Font.XL">16</x:Double>       <!-- Large body, inputs -->
            <x:Double x:Key="Font.XXL">17</x:Double>      <!-- Subtitle -->
            <x:Double x:Key="Font.XXXL">18</x:Double>     <!-- Secure input -->
            <x:Double x:Key="Font.Title.S">20</x:Double>  <!-- Small titles -->
            <x:Double x:Key="Font.Title.M">22</x:Double>  <!-- Main titles -->
            <x:Double x:Key="Font.Title.L">24</x:Double>  <!-- Large titles -->

            <!-- ===== SPECIALIZED FONT SIZES ===== -->
            
            <!-- Input Fields -->
            <x:Double x:Key="Input.FontSize">16</x:Double>
            <x:Double x:Key="Input.WatermarkFontSize">14</x:Double>
            <x:Double x:Key="Input.SecureFontSize">18</x:Double>
            <x:Double x:Key="Input.SegmentFontSize">20</x:Double>
            
            <!-- Button Text -->
            <x:Double x:Key="Button.FontSize">14</x:Double>
            <x:Double x:Key="Button.SmallFontSize">12</x:Double>
            
            <!-- UI Elements -->
            <x:Double x:Key="Footer.FontSize">11</x:Double>
            <x:Double x:Key="Version.FontSize">9</x:Double>
            <x:Double x:Key="Status.FontSize">12</x:Double>
            <x:Double x:Key="Error.FontSize">12</x:Double>
            <x:Double x:Key="Title.FontSize">13</x:Double>     <!-- Window title -->
            <x:Double x:Key="Hint.FontSize">12</x:Double>      <!-- HintedTextBox hints -->
            <x:Double x:Key="Counter.FontSize">11</x:Double>   <!-- HintedTextBox counter -->

            <!-- ===== LINE HEIGHT SYSTEM ===== -->
            <x:Double x:Key="LineHeight.Tight">16</x:Double>   <!-- Captions -->
            <x:Double x:Key="LineHeight.Normal">20</x:Double>  <!-- Body text -->
            <x:Double x:Key="LineHeight.Relaxed">24</x:Double> <!-- Subtitles -->
            <x:Double x:Key="LineHeight.Loose">28</x:Double>   <!-- Titles -->
            <x:Double x:Key="LineHeight.Subtitle">22</x:Double> <!-- Auth subtitles -->
        </ResourceDictionary>
    </Styles.Resources>

    <!-- ===== TEXT STYLES ===== -->
    <!-- Reusable text block styles -->

    <!-- Display Text -->
    <Style Selector="TextBlock.display">
        <Setter Property="FontSize" Value="{StaticResource Font.Title.L}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Loose}" />
    </Style>

    <!-- Title Text -->
    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="{StaticResource Font.Title.M}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Loose}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Subtitle Text -->
    <Style Selector="TextBlock.subtitle">
        <Setter Property="FontSize" Value="{StaticResource Font.XXL}" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Relaxed}" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <!-- Body Text -->
    <Style Selector="TextBlock.body">
        <Setter Property="FontSize" Value="{StaticResource Font.L}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Normal}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Caption Text -->
    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="{StaticResource Font.S}" />
        <Setter Property="FontWeight" Value="Regular" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Tight}" />
        <Setter Property="Opacity" Value="0.7" />
    </Style>

    <!-- Error Text -->
    <Style Selector="TextBlock.error">
        <Setter Property="FontSize" Value="{StaticResource Error.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource Error}" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <!-- Success Text -->
    <Style Selector="TextBlock.success">
        <Setter Property="FontSize" Value="{StaticResource Error.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource Success}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Status Text -->
    <Style Selector="TextBlock.status">
        <Setter Property="FontSize" Value="{StaticResource Status.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource OnSurface}" />
        <Setter Property="Opacity" Value="0.7" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!-- Footer Text -->
    <Style Selector="TextBlock.footer">
        <Setter Property="FontSize" Value="{StaticResource Footer.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource Footer.Text}" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Tight}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <!-- Version Text -->
    <Style Selector="TextBlock.version">
        <Setter Property="FontSize" Value="{StaticResource Version.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource Version.Text}" />
        <Setter Property="Opacity" Value="0.8" />
        <Setter Property="FontFamily" Value="Consolas, Monaco, 'Courier New', monospace" />
    </Style>


    <Style Selector="TextBlock.server-error">
        <Setter Property="FontSize" Value="{StaticResource Error.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource Error}" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style Selector="TextBlock.status-text">
        <Setter Property="FontSize" Value="{StaticResource Status.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource OnSurface}" />
        <Setter Property="Opacity" Value="0.7" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.error-text">
        <Setter Property="FontSize" Value="{StaticResource Status.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource Error}" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.footer-text">
        <Setter Property="FontSize" Value="{StaticResource Footer.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource Footer.Text}" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Tight}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.version-info">
        <Setter Property="FontSize" Value="{StaticResource Version.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource Version.Text}" />
        <Setter Property="Opacity" Value="0.8" />
        <Setter Property="FontFamily" Value="Consolas, Monaco, 'Courier New', monospace" />
    </Style>

</Styles>