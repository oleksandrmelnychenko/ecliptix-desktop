<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ===================================== -->
    <!-- BASE BUTTON STYLES -->
    <!-- ===================================== -->
    
    <Style Selector="Button">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="{StaticResource Duration.Medium}" />
                <TransformOperationsTransition Property="RenderTransform" Duration="{StaticResource Duration.Medium}" />
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button:disabled">
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="RenderTransform" Value="scale(0.98)" />
    </Style>

    <Style Selector="Button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Opacity" Value="0.9"/>
    </Style>
    
    <!-- ===================================== -->
    <!-- AUTH BUTTON - GENERAL STYLE -->
    <!-- ===================================== -->
    
    <Style Selector="Button.auth-button">
        <Setter Property="Height" Value="{StaticResource Button.Height}" />
        <Setter Property="MinWidth" Value="{StaticResource Button.MinWidth}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontSize" Value="{StaticResource Button.FontSize}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="{StaticResource Button.CornerRadius}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="RenderTransform" Value="scale(1)"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" 
                                 Duration="{StaticResource Button.TransitionDuration}" 
                                 Easing="CubicEaseOut" />
                <DoubleTransition Property="Opacity" 
                                  Duration="{StaticResource Button.TransitionDuration}" 
                                  Easing="CubicEaseOut" />
                <TransformOperationsTransition Property="RenderTransform" 
                                               Duration="{StaticResource Button.TransitionDuration}" 
                                               Easing="CubicEaseOut" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.auth-button:pressed">
        <Setter Property="Opacity" Value="0.9" />
        <Setter Property="RenderTransform" Value="scale(0.98)" />
    </Style>

    <Style Selector="Button.auth-button:disabled">
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="Cursor" Value="Arrow" />
    </Style>

    <Style Selector="Button.auth-button:focus-visible">
        <Setter Property="RenderTransform" Value="scale(1.02)" />
    </Style>

    <Style Selector="Button.auth-button:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource Primary}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
    
    <!-- ===================================== -->
    <!-- CONTINUE BUTTON -->
    <!-- ===================================== -->
    
    <Style Selector="Button.continue-button">
        <Setter Property="Background" Value="{DynamicResource Secondary}" />
        <Setter Property="Foreground" Value="{DynamicResource OnSecondary}" />
    </Style>
    
    <Style Selector="Button.continue-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource Button.Primary.Hover}" />
    </Style>
    
    <Style Selector="Button.continue-button:pressed">
        <Setter Property="Background" Value="{DynamicResource Button.Primary.Pressed}" />
    </Style>
    
    <!-- ===================================== -->
    <!-- AUTH PRIMARY BUTTON -->
    <!-- ===================================== -->
    
    <Style Selector="Button.auth-primary">
        <Setter Property="Background" Value="{DynamicResource Secondary}" />
        <Setter Property="Foreground" Value="{DynamicResource OnSecondary}" />
    </Style>
    
    <Style Selector="Button.auth-primary:pointerover">
        <Setter Property="Background" Value="{DynamicResource Button.Primary.Hover}" />
    </Style>
    
    <Style Selector="Button.auth-primary:pressed">
        <Setter Property="Background" Value="{DynamicResource Button.Primary.Pressed}" />
    </Style>
    
    <!-- ===================================== -->
    <!-- CREATE ACCOUNT BUTTON -->
    <!-- ===================================== -->
    
    <Style Selector="Button.create-account-button">
        <Setter Property="CornerRadius" Value="{StaticResource Radius.L}" />
        <Setter Property="Background" Value="{DynamicResource Secondary}" />
        <Setter Property="Foreground" Value="{DynamicResource OnSecondary}" />
    </Style>
    
    <Style Selector="Button.create-account-button:pointerover">
        <Setter Property="Background" Value="#262626" />
    </Style>
    
    <Style Selector="Button.create-account-button:pressed">
        <Setter Property="Background" Value="#1f1f1f" />
        <Setter Property="Opacity" Value="0.95" />
        <Setter Property="RenderTransform" Value="scale(0.98)" />
    </Style>
    
    <!-- ===================================== -->
    <!-- RECOVERY BUTTON -->
    <!-- ===================================== -->
    
    <Style Selector="Button.recovery-button">
        <Setter Property="Background" Value="{DynamicResource Surface}" />
        <Setter Property="Foreground" Value="{DynamicResource OnSurface}" />
    </Style>

    <Style Selector="Button.recovery-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource Button.Secondary.Hover}" />
    </Style>

    <Style Selector="Button.recovery-button:pressed">
        <Setter Property="Background" Value="{DynamicResource Button.Secondary.Pressed}" />
    </Style>
    
    <!-- ===================================== -->
    <!-- SIGN-IN BUTTON -->
    <!-- ===================================== -->
    
    <Style Selector="Button.signin-button">
        <Setter Property="CornerRadius" Value="{StaticResource Radius.M}" />
        <Setter Property="Background" Value="{DynamicResource Surface}" />
        <Setter Property="Foreground" Value="{DynamicResource OnSurface}" />
    </Style>
    
    <Style Selector="Button.signin-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource Button.Secondary.Hover}" />
    </Style>
    
    <Style Selector="Button.signin-button:pressed">
        <Setter Property="Background" Value="{DynamicResource Button.Secondary.Pressed}" />
    </Style>
    
    <!-- ===================================== -->
    <!-- AUTH SECONDARY BUTTON -->
    <!-- ===================================== -->
    
    <Style Selector="Button.auth-secondary">
        <Setter Property="Background" Value="{DynamicResource Surface}" />
        <Setter Property="Foreground" Value="{DynamicResource OnSurface}" />
    </Style>
    
    <Style Selector="Button.auth-secondary:pointerover">
        <Setter Property="Background" Value="{DynamicResource Button.Secondary.Hover}" />
    </Style>
    
    <Style Selector="Button.auth-secondary:pressed">
        <Setter Property="Background" Value="{DynamicResource Button.Secondary.Pressed}" />
    </Style>
    
    <!-- ===================================== -->
    <!-- BACK BUTTON -->
    <!-- ===================================== -->
    
    <Style Selector="Button.back-button">
        <Setter Property="Width" Value="{StaticResource Back.ButtonSize}" />
        <Setter Property="Height" Value="{StaticResource Back.ButtonSize}" />
        <Setter Property="CornerRadius" Value="{StaticResource Radius.Round}" />
        <Setter Property="Background" Value="{DynamicResource Surface}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="{StaticResource Duration.Medium}" />
                <TransformOperationsTransition Property="RenderTransform" Duration="{StaticResource Duration.Fast}" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.back-button:pointerover">
        <Setter Property="Background" Value="#E4E3E3" />
        <Setter Property="RenderTransform" Value="scale(1.05)" />
    </Style>

    <Style Selector="Button.back-button:pressed">
        <Setter Property="Background" Value="#D1D0D0" />
        <Setter Property="RenderTransform" Value="scale(0.95)" />
    </Style>
    
    <!-- ===================================== -->
    <!-- FOOTER LINK BUTTON -->
    <!-- ===================================== -->
    
    <Style Selector="Button.footer-link">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontSize" Value="{StaticResource Footer.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource Footer.Link}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" 
                                 Duration="{StaticResource Duration.Medium}" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.footer-link:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource Footer.Link.Hover}" />
    </Style>
    
    <!-- ===================================== -->
    <!-- LOADING BUTTON -->
    <!-- ===================================== -->
    
    <Style Selector="Button.loading-button">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        ClipToBounds="False"
                        Focusable="True"
                        RenderTransform="{TemplateBinding RenderTransform}">
                    
                    <Grid ClipToBounds="False">
                        <ContentPresenter Name="PART_ContentPresenter"
                                          Background="Transparent"
                                        Content="{TemplateBinding Content}"
                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        TextBlock.Foreground="{TemplateBinding Foreground}"
                                        Focusable="False"/>

                        <Grid Name="PART_LoadingOverlay"
                              Background="Transparent"
                              IsVisible="True"
                              Opacity="0"
                              IsHitTestVisible="False"
                              Focusable="False">
                            <Viewbox Width="20" Height="20"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                                <Canvas Width="26" Height="26"
                                        Margin="0 -1 0 0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                    <Ellipse Width="4" Height="4" Canvas.Left="10" Canvas.Top="2"  Fill="{TemplateBinding Foreground}" Name="Dot1" Opacity="1"/>
                                    <Ellipse Width="4" Height="4" Canvas.Left="17" Canvas.Top="5"  Fill="{TemplateBinding Foreground}" Name="Dot2" Opacity="0.85"/>
                                    <Ellipse Width="4" Height="4" Canvas.Left="20" Canvas.Top="12" Fill="{TemplateBinding Foreground}" Name="Dot3" Opacity="0.7"/>
                                    <Ellipse Width="4" Height="4" Canvas.Left="17" Canvas.Top="19" Fill="{TemplateBinding Foreground}" Name="Dot4" Opacity="0.55"/>
                                    <Ellipse Width="4" Height="4" Canvas.Left="10" Canvas.Top="22" Fill="{TemplateBinding Foreground}" Name="Dot5" Opacity="0.4"/>
                                    <Ellipse Width="4" Height="4" Canvas.Left="3"  Canvas.Top="19" Fill="{TemplateBinding Foreground}" Name="Dot6" Opacity="0.25"/>
                                    <Ellipse Width="4" Height="4" Canvas.Left="0"  Canvas.Top="12" Fill="{TemplateBinding Foreground}" Name="Dot7" Opacity="0.15"/>
                                    <Ellipse Width="4" Height="4" Canvas.Left="3"  Canvas.Top="5"  Fill="{TemplateBinding Foreground}" Name="Dot8" Opacity="0.1"/>
                                </Canvas>
                            </Viewbox>
                        </Grid>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="Button.loading-button /template/ ContentPresenter#PART_ContentPresenter TextBlock">
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="Button.loading-button.is-busy">
        <Setter Property="Cursor" Value="Wait"/>
        <Setter Property="RenderTransform" Value="scale(1)"/>
    </Style>
    
    <Style Selector="Button.loading-button.is-busy:disabled /template/ Border#PART_Border">
        <Setter Property="Opacity" Value="1"/>
    </Style>
    
    <Style Selector="Button.loading-button.is-busy:focus-visible">
        <Setter Property="RenderTransform" Value="scale(1)"/>
    </Style>
    
    <Style Selector="Button.loading-button.is-busy:pressed /template/ Border#PART_Border">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style Selector="Button.loading-button.is-busy /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
    </Style>

    <Style Selector="Button.loading-button.is-busy /template/ Grid#PART_LoadingOverlay">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
    </Style>

    <!-- Loading animation for each dot -->
    <Style Selector="Button.loading-button.is-busy /template/ Ellipse#Dot1">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame Cue="0%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame Cue="12.5%"><Setter Property="Opacity" Value="0.1"/></KeyFrame>
                <KeyFrame Cue="87.5%"><Setter Property="Opacity" Value="0.85"/></KeyFrame>
                <KeyFrame Cue="100%"><Setter Property="Opacity" Value="1"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector="Button.loading-button.is-busy /template/ Ellipse#Dot2">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.85"/></KeyFrame>
                <KeyFrame Cue="12.5%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame Cue="25%"><Setter Property="Opacity" Value="0.1"/></KeyFrame>
                <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.85"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector="Button.loading-button.is-busy /template/ Ellipse#Dot3">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.7"/></KeyFrame>
                <KeyFrame Cue="25%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame Cue="37.5%"><Setter Property="Opacity" Value="0.1"/></KeyFrame>
                <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.7"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector="Button.loading-button.is-busy /template/ Ellipse#Dot4">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.55"/></KeyFrame>
                <KeyFrame Cue="37.5%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame Cue="50%"><Setter Property="Opacity" Value="0.1"/></KeyFrame>
                <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.55"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector="Button.loading-button.is-busy /template/ Ellipse#Dot5">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.4"/></KeyFrame>
                <KeyFrame Cue="50%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame Cue="62.5%"><Setter Property="Opacity" Value="0.1"/></KeyFrame>
                <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.4"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector="Button.loading-button.is-busy /template/ Ellipse#Dot6">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.25"/></KeyFrame>
                <KeyFrame Cue="62.5%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame Cue="75%"><Setter Property="Opacity" Value="0.1"/></KeyFrame>
                <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.25"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector="Button.loading-button.is-busy /template/ Ellipse#Dot7">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.15"/></KeyFrame>
                <KeyFrame Cue="75%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame Cue="87.5%"><Setter Property="Opacity" Value="0.1"/></KeyFrame>
                <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.15"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector="Button.loading-button.is-busy /template/ Ellipse#Dot8">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.1"/></KeyFrame>
                <KeyFrame Cue="87.5%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.1"/></KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    
    <!-- ===================================== -->
    <!-- MODIFIER STYLES -->
    <!-- ===================================== -->

    <Style Selector="Button.success">
        <Setter Property="Background" Value="{DynamicResource Success}" />
        <Setter Property="Foreground" Value="{DynamicResource OnSuccess}" />
    </Style>

    <Style Selector="Button.error">
        <Setter Property="Background" Value="{DynamicResource Error}" />
        <Setter Property="Foreground" Value="{DynamicResource OnError}" />
    </Style>

    <Style Selector="Button.small">
        <Setter Property="Height" Value="{StaticResource Button.SmallHeight}" />
        <Setter Property="FontSize" Value="{StaticResource Button.SmallFontSize}" />
        <Setter Property="Padding" Value="{StaticResource Padding.S}" />
    </Style>

    <Style Selector="Button.large">
        <Setter Property="Height" Value="{StaticResource Button.LargeHeight}" />
        <Setter Property="FontSize" Value="{StaticResource Font.XL}" />
        <Setter Property="Padding" Value="{StaticResource Padding.L}" />
    </Style>
    
    <!-- ===================================== -->
    <!-- FOOTER SECTION STYLES -->
    <!-- ===================================== -->

    <Style Selector="StackPanel.footer-section">
        <Setter Property="Spacing" Value="{StaticResource Spacing.S}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Margin" Value="0,8,0,8" />
        <Setter Property="Opacity" Value="0.9" />
    </Style>

    <Style Selector="StackPanel.footer-section > StackPanel">
        <Setter Property="Margin" Value="0,0,0,2" />
    </Style>

    <Style Selector="StackPanel.footer-section > TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="LineHeight" Value="{StaticResource LineHeight.Tight}" />
        <Setter Property="Margin" Value="0,1,0,4" />
    </Style>

    <Style Selector="StackPanel.footer-section > Grid">
        <Setter Property="Margin" Value="0,2,0,0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

</Styles>