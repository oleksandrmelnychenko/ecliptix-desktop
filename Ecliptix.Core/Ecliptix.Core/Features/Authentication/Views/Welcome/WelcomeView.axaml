<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Ecliptix.Core.Features.Authentication.ViewModels.Welcome"
             mc:Ignorable="d"
             d:DesignWidth="320"
             d:DesignHeight="480"
             x:Class="Ecliptix.Core.Features.Authentication.Views.Welcome.WelcomeView"
             x:DataType="vm:WelcomeViewModel"
             MinWidth="320"
             Width="320">

    <Grid RowDefinitions="Auto,*,Auto"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Top"
          Margin="{StaticResource Welcome.Container.Margin}"
          Width="{StaticResource Content.MaxWidth}">

        <StackPanel Grid.Row="0"
                    Spacing="{StaticResource Spacing.M}"
                    HorizontalAlignment="Center"
                    Name="HeaderSection"
                    Margin="0,0,0,22">

            <Border Height="{StaticResource Logo.SmallSize}"
                    HorizontalAlignment="Center">
                <Image Source="avares://Ecliptix.Core/Assets/Screens/Welcome/EcliptiX.png"
                       Stretch="Uniform" />
            </Border>
        </StackPanel>

        <Border Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Svg Path="../../../../Assets/Screens/Welcome/welcome-circle.svg"
                 Width="{StaticResource Circle.Size}"
                 Height="{StaticResource Circle.Size}"
                 Stretch="Uniform" />
        </Border>

        <Grid Grid.Row="2"
              ColumnDefinitions="*,*"
              ColumnSpacing="{StaticResource Spacing.M}"
              HorizontalAlignment="Stretch"
              Margin="0,32,0,16">

            <Button Grid.Column="0"
                    Content="{Binding LocalizationService[Welcome.SignInButton]}"
                    Command="{Binding NavToSignInCommand}"
                    Classes="auth-button recovery-button loading-button"
                    Classes.is-busy="{Binding IsSignInBusy}"
                    HorizontalAlignment="Stretch" />

            <Border Grid.Column="1"
                    BoxShadow="0 8 20 0 #60000000"
                    CornerRadius="{StaticResource Button.CornerRadius}">
                <Button Content="{Binding LocalizationService[Welcome.CreateAccountButton]}"
                        Command="{Binding NavToCreateAccountCommand}"
                        Classes="auth-button continue-button loading-button"
                        Classes.is-busy="{Binding IsCreateAccountBusy}"
                        HorizontalAlignment="Stretch" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
