<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Ecliptix.Core.Features.Authentication.ViewModels.Welcome"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d"
             d:DesignWidth="320"
             d:DesignHeight="480"
             x:Class="Ecliptix.Core.Features.Authentication.Views.Welcome.WelcomeView"
             x:DataType="vm:WelcomeViewModel"
             MinWidth="320"
             Width="320">

    <UserControl.Resources>
        <x:Double x:Key="ButtonHeight">44</x:Double>
        <x:Double x:Key="StandardFontSize">14</x:Double>
        <x:Double x:Key="LogoHeight">36</x:Double>
        <x:Double x:Key="TaglineHeight">18</x:Double>
        <x:Double x:Key="CircleSize">180</x:Double>
        <x:Double x:Key="InnerCircleSize">170</x:Double>
        <x:Double x:Key="HeaderSpacing">12</x:Double>
        <x:Double x:Key="ButtonSpacing">8</x:Double>
        <CornerRadius x:Key="SignInButtonCornerRadius">10</CornerRadius>
        <CornerRadius x:Key="CreateAccountButtonCornerRadius">12</CornerRadius>
        <CornerRadius x:Key="CircleImageCornerRadius">90</CornerRadius>
        <CornerRadius x:Key="InnerCircleCornerRadius">85</CornerRadius>
        <SolidColorBrush x:Key="GrayButtonHoverBrush">#F5F5F5</SolidColorBrush>
        <SolidColorBrush x:Key="GrayButtonPressedBrush">#EEEEEE</SolidColorBrush>
        <SolidColorBrush x:Key="DarkButtonHoverBrush">#262626</SolidColorBrush>
        <SolidColorBrush x:Key="DarkButtonPressedBrush">#1f1f1f</SolidColorBrush>
        <Color x:Key="CircleBorderColor">White</Color>
        <Thickness x:Key="CircleBorderThickness">4</Thickness>
        <Thickness x:Key="ContainerMargin">0,8,0,8</Thickness>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Base Button Styles -->
        <Style Selector="Button.auth-button">
            <Setter Property="Height" Value="{StaticResource ButtonHeight}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="{StaticResource StandardFontSize}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15" Easing="CubicEaseOut" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.auth-button:pressed">
            <Setter Property="Opacity" Value="0.9" />
        </Style>

        <!-- Sign In Button (Light Gray) -->
        <Style Selector="Button.signin-button">
            <Setter Property="CornerRadius" Value="{StaticResource SignInButtonCornerRadius}" />
            <Setter Property="Background" Value="{DynamicResource BackButtonBackgroundColor}" />
        </Style>

        <Style Selector="Button.signin-button:pointerover">
            <Setter Property="Background" Value="{StaticResource GrayButtonHoverBrush}" />
        </Style>

        <Style Selector="Button.signin-button:pressed">
            <Setter Property="Background" Value="{StaticResource GrayButtonPressedBrush}" />
        </Style>

        <!-- Create Account Button (Dark) -->
        <Style Selector="Button.create-account-button">
            <Setter Property="CornerRadius" Value="{StaticResource CreateAccountButtonCornerRadius}" />
            <Setter Property="Background" Value="{DynamicResource DarkButtonColor}" />
            <Setter Property="Foreground" Value="{DynamicResource DarkButtonForegroundColor}" />
        </Style>

        <Style Selector="Button.create-account-button:pointerover">
            <Setter Property="Background" Value="{StaticResource DarkButtonHoverBrush}" />
        </Style>

        <Style Selector="Button.create-account-button:pressed">
            <Setter Property="Background" Value="{StaticResource DarkButtonPressedBrush}" />
        </Style>

        <!-- Layout Styles -->
        <Style Selector="Border.circle-container">
            <Setter Property="Width" Value="{StaticResource CircleSize}" />
            <Setter Property="Height" Value="{StaticResource CircleSize}" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style Selector="StackPanel.header-section">
            <Setter Property="Spacing" Value="{StaticResource HeaderSpacing}" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </UserControl.Styles>

    <!-- Main Layout -->
    <Grid RowDefinitions="Auto,*,Auto"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Top"
          RowSpacing="42"
          Margin="{StaticResource ContainerMargin}"
          Width="320">

        <!-- Header Section -->
        <StackPanel Grid.Row="0"
                    Classes="header-section"
                    Name="HeaderSection">

            <!-- Main Logo -->
            <Border Height="{StaticResource LogoHeight}"
                    HorizontalAlignment="Center">
                <Image Source="avares://Ecliptix.Core/Assets/Welcome-screen/EcliptiX.png"
                       Stretch="Uniform" />
            </Border>

            <!-- Tagline -->
            <Border Height="{StaticResource TaglineHeight}"
                    HorizontalAlignment="Center">
                <Image Source="avares://Ecliptix.Core/Assets/Welcome-screen/Master the architecture of your mind.png"
                       Stretch="Uniform" />
            </Border>
        </StackPanel>

        <!-- Optimized Central Circle Image -->
        <Border Grid.Row="1"
                Width="{StaticResource CircleSize}"
                Height="{StaticResource CircleSize}"
                CornerRadius="{StaticResource CircleImageCornerRadius}"
                Background="{StaticResource CircleBorderColor}"
                BorderThickness="{StaticResource CircleBorderThickness}"
                BorderBrush="{StaticResource CircleBorderColor}"
                ClipToBounds="True"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="6" Color="#20000000" OffsetX="0" OffsetY="2" />
            </Border.Effect>
            
            <Border Width="{StaticResource InnerCircleSize}"
                    Height="{StaticResource InnerCircleSize}"
                    CornerRadius="{StaticResource InnerCircleCornerRadius}"
                    ClipToBounds="True"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Image Source="avares://Ecliptix.Core/Assets/Welcome-screen/bg.png"
                       Stretch="UniformToFill"
                       RenderOptions.BitmapInterpolationMode="HighQuality" />
            </Border>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*"
              ColumnSpacing="{StaticResource ButtonSpacing}"
              HorizontalAlignment="Stretch">

            <!-- Sign In Button -->
            <Button Grid.Column="0"
                    Content="{Binding LocalizationService[Welcome.SignInButton]}"
                    Command="{Binding NavToSignInCommand}"
                    Classes="auth-button signin-button"
                    Foreground="{DynamicResource LightButtonForegroundColor}"
                    HorizontalAlignment="Stretch" />

            <!-- Create Account Button -->
            <Button Grid.Column="1"
                    Content="{Binding LocalizationService[Welcome.CreateAccountButton]}"
                    Command="{Binding NavToCreateAccountCommand}"
                    Classes="auth-button create-account-button"
                    HorizontalAlignment="Stretch" />
        </Grid>
    </Grid>
</UserControl>