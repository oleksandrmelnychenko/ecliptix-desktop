<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Ecliptix.Core.Features.Authentication.ViewModels.Welcome"
             mc:Ignorable="d"
             d:DesignWidth="320"
             d:DesignHeight="480"
             x:Class="Ecliptix.Core.Features.Authentication.Views.Welcome.WelcomeView"
             x:DataType="vm:WelcomeViewModel"
             MinWidth="320"
             Width="320">

    <!-- Main Layout -->
    <Grid RowDefinitions="Auto,*,Auto"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Top"
          RowSpacing="{StaticResource Spacing.XXL}"
          Margin="{StaticResource Container.Margin}"
          Width="{StaticResource Content.MaxWidth}">

        <!-- Header Section -->
        <StackPanel Grid.Row="0"
                    Spacing="{StaticResource Spacing.M}"
                    HorizontalAlignment="Center"
                    Name="HeaderSection">

            <!-- Main Logo -->
            <Border Height="{StaticResource Logo.SmallSize}"
                    HorizontalAlignment="Center">
                <Image Source="avares://Ecliptix.Core/Assets/Screens/Welcome/EcliptiX.png"
                       Stretch="Uniform" />
            </Border>

            <!-- Tagline -->
            <Border Height="{StaticResource Tagline.Height}"
                    HorizontalAlignment="Center">
                <Image Source="avares://Ecliptix.Core/Assets/Screens/Welcome/Master the architecture of your mind.png"
                       Stretch="Uniform" />
            </Border>
        </StackPanel>

        <!-- Optimized Central Circle Image -->
        <Border Grid.Row="1"
                Width="{StaticResource Circle.Size}"
                Height="{StaticResource Circle.Size}"
                CornerRadius="{StaticResource Radius.Circle}"
                Background="{DynamicResource Circle.Border}"
                BorderThickness="{StaticResource Circle.BorderThickness}"
                BorderBrush="{DynamicResource Circle.Border}"
                ClipToBounds="True"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="6" Color="#20000000" OffsetX="0" OffsetY="2" />
            </Border.Effect>
            
            <Border Width="{StaticResource Circle.InnerSize}"
                    Height="{StaticResource Circle.InnerSize}"
                    CornerRadius="85"
                    ClipToBounds="True"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Image Source="avares://Ecliptix.Core/Assets/Screens/Welcome/bg.png"
                       Stretch="UniformToFill"
                       RenderOptions.BitmapInterpolationMode="HighQuality" />
            </Border>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*"
              ColumnSpacing="{StaticResource Spacing.S}"
              HorizontalAlignment="Stretch">

            <!-- Sign In Button -->
            <Button Grid.Column="0"
                    Content="{Binding LocalizationService[Welcome.SignInButton]}"
                    Command="{Binding NavToSignInCommand}"
                    Classes="auth-button signin-button"
                    Foreground="{DynamicResource OnSurface}"
                    HorizontalAlignment="Stretch" />

            <!-- Create Account Button -->
            <Button Grid.Column="1"
                    Content="{Binding LocalizationService[Welcome.CreateAccountButton]}"
                    Command="{Binding NavToCreateAccountCommand}"
                    Classes="auth-button create-account-button"
                    HorizontalAlignment="Stretch" />
        </Grid>
    </Grid>
</UserControl>