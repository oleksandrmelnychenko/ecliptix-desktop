<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sharedConverters="clr-namespace:Ecliptix.Core.Shared.Converters"
             xmlns:core="clr-namespace:Ecliptix.Core.Core.Controls"
             xmlns:memberships1="clr-namespace:Ecliptix.Core.Features.Authentication.ViewModels.Hosts"
             mc:Ignorable="d"
             d:DesignWidth="480"
             d:DesignHeight="680"
             x:DataType="memberships1:AuthenticationViewModel"
             x:Class="Ecliptix.Core.Features.Authentication.Views.Hosts.AuthenticationView">

    <UserControl.Resources>
        <sharedConverters:BooleanToOpacityConverter x:Key="BoolToOpacityConverter"
                                               TrueOpacity="1.0"
                                               FalseOpacity="0" />
    </UserControl.Resources>

    <!-- Module-Specific Content Only -->
    <Grid RowDefinitions="Auto,*,Auto"
          RowSpacing="2"
          ClipToBounds="True"
          Margin="0,20,0,0">

        <!-- Back Button (Module Navigation) -->
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding NavigateBack}"
                Margin="24,24,0,0"
                Grid.Row="0"
                Classes="back-button"
                Opacity="{Binding CanNavigateBack, Converter={StaticResource BoolToOpacityConverter}}">
            <Image Source="avares://Ecliptix.Core/Assets/Icons/UI/back-icon.png"
                   Stretch="Uniform"
                   Width="18"
                   Height="18" />
        </Button>

        <!-- Logo Section -->
        <Border Grid.Row="0"
                HorizontalAlignment="Center"
                Padding="20,10"
                Margin="0 23 0 0">
            <Svg Path="../../../../Assets/Branding/Logos/ecliptix_logo.svg"
                 Width="{StaticResource Logo.Size}"
                 Height="{StaticResource Logo.Size}"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top" />
        </Border>

        <Border Grid.Row="1">
            <Border Padding="{StaticResource ContentPadding}">
                <core:ModuleContentControl ViewModelContent="{Binding CurrentView}"
                                           Background="Transparent"
                                           Width="{StaticResource Content.MaxWidth}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Stretch"
                                           ClipToBounds="False" />
            </Border>
        </Border>

        <StackPanel Grid.Row="2"
                    Classes="footer-section"
                    Spacing="8"
                    MinHeight="60">

            <!-- Agreement Text (Terms & Privacy) -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FlowDirection="LeftToRight"
                        MinHeight="20">
                <TextBlock Text="{Binding LocalizationService[Footer.AgreementPrefix]}"
                           Classes="footer"
                           VerticalAlignment="Center"
                           Opacity="0.6"
                           TextWrapping="NoWrap" />
                <Button Content="{Binding LocalizationService[Footer.TermsOfService]}"
                        Command="{Binding OpenTermsOfServiceCommand}"
                        Classes="footer-link"
                        Padding="0"
                        Opacity="0.6"
                        VerticalAlignment="Center">
                    <Button.Resources>
                        <TextBlock x:Key="ContentPresenter" TextWrapping="NoWrap" />
                    </Button.Resources>
                </Button>
                <TextBlock Text="{Binding LocalizationService[Footer.AgreementConjunction]}"
                           Classes="footer"
                           VerticalAlignment="Center"
                           Opacity="0.6"
                           TextWrapping="NoWrap" />
                <Button Content="{Binding LocalizationService[Footer.PrivacyPolicy]}"
                        Command="{Binding OpenPrivacyPolicyCommand}"
                        Classes="footer-link"
                        Padding="0"
                        Opacity="0.6"
                        VerticalAlignment="Center">
                    <Button.Resources>
                        <TextBlock x:Key="ContentPresenter" TextWrapping="NoWrap" />
                    </Button.Resources>
                </Button>
            </StackPanel>

            <!-- Copyright and version -->
            <Grid HorizontalAlignment="Stretch">
                <TextBlock Text="{Binding AppVersion, StringFormat='v{0}'}"
                           Classes="version"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           ToolTip.Tip="{Binding FullVersionInfo}"
                           Margin="10,0,0,0"
                           Opacity="0.7"
                           FontWeight="Medium" />

                <TextBlock Text="{Binding LocalizationService[Footer.Copyright]}"
                           Classes="footer"
                           Opacity="0.6"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
