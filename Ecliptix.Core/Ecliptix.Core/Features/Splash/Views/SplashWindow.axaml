<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:splash="clr-namespace:Ecliptix.Core.Features.Splash.ViewModels"
        xmlns:sharedConverters="clr-namespace:Ecliptix.Core.Shared.Converters"
        xmlns:converters="clr-namespace:Avalonia.Markup.Xaml.Converters;assembly=Avalonia.Markup.Xaml"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ecliptix.Core.Features.Splash.Views.SplashWindow"
        Title="Ecliptix"
        x:DataType="splash:SplashWindowViewModel"
        x:CompileBindings="True"
        Width="300" Height="300"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="Transparent">

    <Window.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <sharedConverters:EqualityConverter x:Key="EqualityConverter" />
        <SolidColorBrush x:Key="BrushBlurConnected" Color="#28C940" Opacity="1" />
        <SolidColorBrush x:Key="BrushBlurConnecting" Color="#FFBD2E" Opacity="1" />
        <SolidColorBrush x:Key="BrushBlurDisconnected" Color="#FF5F57" Opacity="1" />
        <SolidColorBrush x:Key="BrushBlurDefault" Color="#9966CC" Opacity="1" />
        <SolidColorBrush x:Key="BrushContentConnected" Color="#F0FFF4" />
        <SolidColorBrush x:Key="BrushContentConnecting" Color="#FFF8F0" />
        <SolidColorBrush x:Key="BrushContentDisconnected" Color="#FFF0F0" />
        <SolidColorBrush x:Key="BrushContentDefault" Color="#FAFAFA" />
        
        <BoxShadows x:Key="BoxShadowDefault">0 0 10 8 #409966CC</BoxShadows>
        <BoxShadows x:Key="BoxShadowConnected">0 0 10 8 #4028C940</BoxShadows>
        <BoxShadows x:Key="BoxShadowConnecting">0 0 10 8 #40FFBD2E</BoxShadows>
        <BoxShadows x:Key="BoxShadowDisconnected">0 0 10 8 #40FF5F57</BoxShadows>

    </Window.Resources>

    <Window.Styles>
        <Style Selector="Border#ContentBorder">
            <Setter Property="Background" Value="{StaticResource BrushContentDefault}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBlurDefault}" />
            <Setter Property="BoxShadow" Value="{StaticResource BoxShadowDefault}" />
            <Setter Property="Transitions">
                <Transitions>
                    <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.3" />
                    <BrushTransition Property="Background" Duration="0:0:0.3" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.3" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Window.connected Border#ContentBorder">
            <Setter Property="Background" Value="{StaticResource BrushContentConnected}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBlurConnected}" />
            <Setter Property="BoxShadow" Value="{StaticResource BoxShadowConnected}" />
        </Style>

        <Style Selector="Window.connecting Border#ContentBorder, Window.restore Border#ContentBorder">
            <Setter Property="Background" Value="{StaticResource BrushContentConnecting}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBlurConnecting}" />
            <Setter Property="BoxShadow" Value="{StaticResource BoxShadowConnecting}" />
        </Style>

        <Style Selector="Window.disconnected Border#ContentBorder">
            <Setter Property="Background" Value="{StaticResource BrushContentDisconnected}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBlurDisconnected}" />
            <Setter Property="BoxShadow" Value="{StaticResource BoxShadowDisconnected}" />
        </Style>
    </Window.Styles>

    <Grid>
        <Border Name="ContentBorder"
                BorderThickness="1"
                CornerRadius="22"
                Padding="4"
                Background="#3b3c40"
                Margin="10">

            <Grid RowDefinitions="*, Auto">

                <Svg Grid.Row="0"
                     Path="../../../../Assets/Branding/Logos/ecliptix_logo.svg"
                     VerticalAlignment="Center"
                     Width="160"
                     Height="160"
                     ClipToBounds="True"
                     HorizontalAlignment="Center"
                      />
            </Grid>
        </Border>
    </Grid>
</Window>